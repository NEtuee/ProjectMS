<AIPackage Name="AobaTsubaPackage" DefaultState="AI_Tsuba">

    <AIState>
        <AI_Tsuba UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" SearchIdentifier="Player">
            <Event_OnExecute>    
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="AC_Tsuba"/>
            </Event_OnExecute>

            <Branch Condition="AttackCatchTarget" Execute="AI_Tsuba_Entry"/>
            <Branch Condition="End" Execute="TerminatePackage"/>
        </AI_Tsuba>

        <AI_Tsuba_Entry UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="Test" Log="AI Rush Success"/>
                <AIEvent Type="SetAction" Action="AC_Tsuba_Entry"/>
            </Event_OnExecute>

            <Branch Condition="(PackageExecutedTime >= 0.7)" Execute="AI_Tsuba_Attack"/>
            <Branch Condition="IsCatcher == false" Execute="AI_Away"/>
        </AI_Tsuba_Entry>

        <AI_Tsuba_Attack UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetAction" Action="AC_Tsuba_Attack"/>
            </Event_OnExecute>
            
            <Branch Condition="End" Execute="AI_RaisenPre"/> <!-- 공격 성공 후 바로 뢰섬 -->
        </AI_Tsuba_Attack>
    
        <AI_Away UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetAction" Action="AC_Away"/>
            </Event_OnExecute>
        
            <Branch Condition="End" Execute="TerminatePackage"/>
        </AI_Away>

        <!-- 뢰섬 -->
        <AI_RaisenPre UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="AC_RaisenPre"/>
            </Event_OnExecute>        
            
            <Branch Condition="End" Execute="AI_RaisenSlash"/>
        </AI_RaisenPre>

        <AI_RaisenSlash UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetAction" Action="AC_RaisenSlash"/>
            </Event_OnExecute>
            
            <Branch Condition="AttackSuccess" Execute="AI_RaisenSuccess"/>
            <Branch Condition="End" Execute="TerminatePackage"/>
        </AI_RaisenSlash>
        
        <AI_RaisenSuccess UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetAction" Action="AC_RaisenSuccess"/>
            </Event_OnExecute>

            <Branch Condition="End" Execute="TerminatePackage"/>    
        </AI_RaisenSuccess>

        <TerminatePackage>
            <Event_OnExecute>
                <AIEvent Type="TerminatePackage"/>
            </Event_OnExecute>
        </TerminatePackage>

    </AIState>

</AIPackage>