<!-- 액션그래프 예시 -->
<ActionGraph Name="Test ActionGraph" FramePerSecondAuto="12">

    <Idle MovementType="RootMotion">
        <Animation Path="IdleAnimation" StartFrame="0" EndFrame="16"/>

        <!-- 루프 브랜치 -->
        <Branch Condition="AnimationEnd" Execute="IdleAnimation">
        <!-- 이동 브랜치 -->
        <Branch Condition="Input_Move" Execute="Move">
        <!-- 어택 브랜치 -->
        <Branch Condition="Input_Attack" Execute="AttackAnimation_1">
    </Idle>


    <Move MovementType="RootMotion">
        <Animation Path="MoveAnimation" StartFrame="0" EndFrame="8">
            <FrameEvent StartFrame="0" EventType="Sound" SoundKey="Sound_footstep"/>
            <FrameEvent StartFrame="0" EventType="Effect" SoundKey="Effect_footstep"/>

            <FrameEvent StartFrame="4" EventType="Sound" SoundKey="Sound_footstep"/>
            <FrameEvent StartFrame="4" EventType="Effect" SoundKey="Effect_footstep"/>
        </Animation>

        <!-- 이동 입력이 종료되면 idle로 -->
        <Branch Condition="!Input_Move" Execute="IdleAnimation">
        <!-- 어택 브랜치 -->
        <Branch Condition="Input_Attack" Execute="AttackAnimation_1">
    </Move>

    <Attack_1 MovementType="RootMotion">
        <Animation Path="AttackAnimation_1" StartFrame="0" EndFrame="12">
            <FrameEvent StartFrame="1.5" EventType="Attak_Area" AttackKey="Attack_Small">
                <OnHit> <!-- 적이 히트했을 때 -->
                    <FrameEvent EventType="CameraShake">
                    <FrameEvent EventType="FrameStop" FrameStopTime="0.5">
                </OnHit>
            </FrameEvent>
        </Animation>

        <!-- 일정 프레임 안에 다음 공격 입력시 2타 -->
        <Branch Condition="AttackInput && (Frame <= 8)" Execute="Attack_2">
        <!-- 이동 브랜치, 무조건 8프레임은 유지 -->
        <Branch Condition="Input_Move && (Frame > 8)" Execute="Move">
        <!-- 애니메이션 끝나면 다시 idle로 -->
        <Branch Condition="AnimationEnd" Execute="IdleAnimation">
    </Attack_1>
    
    <Attack_2 MovementType="RootMotion">
        <Animation Path="AttackAnimation_2" StartFrame="0" EndFrame="12">
            <FrameEvent StartFrame="4" EventType="Attak_Area" AttackKey="Attack_Large"/>
                <OnHit> <!-- 적이 히트했을 때 -->
                    <FrameEvent EventType="CameraShake">
                    <FrameEvent EventType="FrameStop" FrameStopTime="0.5">
                </OnHit>
            </FrameEvent>
        </Animation>

        <!-- 이동 브랜치, 무조건 8프레임은 유지 -->
        <Branch Condition="Input_Move && (Frame > 8)" Execute="Move">
        <!-- 2타 애니 끝나면 idle로 -->
        <Branch Condition="AnimationEnd" Execute="Idle">
    </Attack_2>

</ActionGraph>