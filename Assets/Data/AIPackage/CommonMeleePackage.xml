
<AIPackage Name="CommonMeleePackage" DefaultState="Entry">

    <PackageEvent_OnExecute>
        <AIEvent Type="Test" Log="OnExecute"/>
    </PackageEvent_OnExecute>

    <PackageEvent_OnExit>
        <AIEvent Type="Test" Log="OnExit"/>
    </PackageEvent_OnExit>


    <BranchSet Name="TestBranchSet">
        <Branch Condition="true" Execute="Entry"/>
    </BranchSet>



    <AIState>
        <Entry UpdateTime="1.0" SkipStart="true">
            <Event_OnFrame>
                <AIEvent Type="Test" Log="OnFrame Entry"/>
            </Event_OnFrame>

            <Branch Condition="true" Execute="Chase"/>
        </Entry>

        <Chase UpdateTime="1.0" SkipStart="true">
            <Event_OnExecute>
                <AIEvent Type="Test" Log="Check"/>
            </Event_OnExecute>

            <Event_OnFrame>
                <AIEvent Type="Test" Log="Check"/>
            </Event_OnFrame>

            <UseBranchSet Name="TestBranchSet"/>
        </Chase>

    </AIState>

</AIPackage>