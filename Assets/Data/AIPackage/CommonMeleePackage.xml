
<AIPackage Name="CommonMeleePackage" DefaultState="Entry">

    <Event_OnExecute>
        <AIEvent Type="Test" Log="OnExecute Package"/>
    </Event_OnExecute>

    <Event_OnExit>
        <AIEvent Type="Test" Log="OnExit"/>
    </Event_OnExit>


    <BranchSet Name="TestBranchSet">
        <Branch Condition="true" Execute="Entry"/>
    </BranchSet>



    <AIState>
        <Entry UpdateTime="1.0">
            <Event_OnExecute>
                <AIEvent Type="Test" Log="entry"/>
            </Event_OnExecute>

            <Event_OnExit>
                <AIEvent Type="Test" Log="entry end"/>
            </Event_OnExit>

            <Branch Condition="true" Execute="Chase"/>
        </Entry>

        <Chase UpdateTime="1.0">
            <Event_OnExecute>
                <AIEvent Type="Test" Log="chase"/>
            </Event_OnExecute>

            <UseBranchSet Name="TestBranchSet"/>
        </Chase>

    </AIState>

</AIPackage>