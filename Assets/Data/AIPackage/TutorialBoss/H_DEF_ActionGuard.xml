
<AIPackage Name="H_DEF_ActionGuard" DefaultState="Entry">

    <AIState>
        <Entry UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="1.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetAction" Action="MOV_Idle"/>
                <AIEvent Type="Test" Log="H_DEF_ActionGuard"/>
            </Event_OnExecute>

            <Branch Condition="true" Execute="DEF_C_Guard"/>
        </Entry>

        <DEF_C_Guard UpdateTime="0.0">
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="DEF_C_Guard"/>
            </Event_OnExecute>

            <Branch Condition="End == true" Execute="TerminatePackage"/>
        </DEF_C_Guard>

        <TerminatePackage>
            <Event_OnExecute>
                <AIEvent Type="Test" Log="Terminate H_DEF_MoveDodge Package"/>
                <AIEvent Type="TerminatePackage"/>
            </Event_OnExecute>
        </TerminatePackage>
       
    </AIState>
</AIPackage>