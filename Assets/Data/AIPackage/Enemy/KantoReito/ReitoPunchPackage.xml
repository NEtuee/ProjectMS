<AIPackage Name="ReitoPunchPackage" DefaultState="AI_Punch">

    <AIState>
        <AI_Punch UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" SearchIdentifier="Player">
            <Event_OnExecute>    
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="AC_Punch"/>
            </Event_OnExecute>
            <!-- 추후 발차기 종류 추가 (일반 발차기, 후공 발차기, 3연속 발차기)-->
            <Branch Condition="AttackCatchTarget" Execute="AI_PunchSuccess"/>
            <Branch Condition="End" Execute="TerminatePackage"/>
        </AI_Punch>

        <!-- Rush 공격 실패 후 대기 상태, 1.47 sec (0.53 sec 은 Rush에서 사용)-->
        <!--
        <AI_RushFailed UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetAction" Action="AC_Idle"/>
            </Event_OnExecute>

            <Branch Condition="(PackageExecutedTime >= 1.47)" Execute="TerminatePackage"/>
        </AI_RushFailed>
        -->
        <AI_PunchSuccess UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="Test" Log="AI Rush Success"/>
                <AIEvent Type="SetAction" Action="AC_PunchSuccess"/>
            </Event_OnExecute>

            <Branch Condition="End" Execute="TerminatePackage"/>
        </AI_PunchSuccess>

        <TerminatePackage>
            <Event_OnExecute>
                <AIEvent Type="TerminatePackage"/>
            </Event_OnExecute>
        </TerminatePackage>

    </AIState>

</AIPackage>