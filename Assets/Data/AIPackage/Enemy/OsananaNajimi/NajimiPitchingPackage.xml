<AIPackage Name="NajimiPitchingPackage" DefaultState="AI_PitcherReady">

    <AIState>
        <AI_PitcherReady UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="AC_PitcherReady"/>
            </Event_OnExecute>

            <Branch Condition="End" Execute="AI_Pitch"/>
        </AI_PitcherReady>

        <AI_Pitch UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetAction" Action="AC_Pitch"/>
            </Event_OnExecute>

            <Branch Condition="End" Execute="AI_PitchRecover"/>            
        </AI_Pitch>

        <AI_PitchRecover UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetAction" Action="AC_Idle"/>
            </Event_OnExecute>
        
            <Branch Condition="(PackageExecutedTime >= 0.33)" Execute="TerminatePackage"/>
        </AI_PitchRecover>

        <TerminatePackage>
            <Event_OnExecute>
                <AIEvent Type="TerminatePackage"/>
            </Event_OnExecute>
        </TerminatePackage>

    </AIState>

</AIPackage>