
<AIPackage Name="CommonChasePackage" DefaultState="Entry">
    <Event_OnAttacked>
        <AIEvent Type="Test" Log="Attacked_Package"/>
    </Event_OnAttacked>

    <AIState>
        <Entry UpdateTime="1.0" TargetSearchType="Near" TargetSearchRange="1.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetAction" Action="Idle"/>
            </Event_OnExecute>

            <Branch Condition="(TargetDistance > 0.7) && TargetExists" Execute="Chase"/>
            <Branch Condition="Hit == true" Execute="Hit"/>

        </Entry>

        <Chase UpdateTime="0.0">
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="MoveAll"/>
            </Event_OnExecute>

            <Branch Condition="Hit == true" Execute="HitCounter"/>
            <Branch Condition="(TargetDistance < 0.6) || (TargetExists == false)" Execute="Entry"/>

            <Event_OnUpdate>
                <AIEvent Type="SetDirectionToTarget"/>
            </Event_OnUpdate>
        </Chase>

        <Hit UpdateTime="0.0">
            <Event_OnExecute>
                <AIEvent Type="SetAction" Action="Hit"/>
            </Event_OnExecute>

            <Branch Condition="End == true" Execute="Entry"/>

        </Hit>

        <HitCounter UpdateTime="0.0">
            <Branch Condition="true" Execute="SideDash"/>
        </HitCounter>


        <SideDash UpdateTime="0.0">
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="SideDash"/>
            </Event_OnExecute>

            <Event_OnFrame>
                <AIEvent Type="SetDirectionToTarget"/>
            </Event_OnFrame>

            <Branch Condition="End == true" Execute="AttackTarget"/>
        </SideDash>

        <AttackTarget UpdateTime="3.0">
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="AttackCharge"/>
            </Event_OnExecute>

            <Event_OnFrame>
                <AIEvent Type="SetDirectionToTarget"/>
            </Event_OnFrame>

            <Branch Condition="true" Execute="Entry"/>
        </AttackTarget>


    </AIState>
</AIPackage>