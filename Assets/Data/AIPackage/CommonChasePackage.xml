
<AIPackage Name="CommonChasePackage" DefaultState="Entry">
    <Event_OnAttacked>
        <AIEvent Type="Test" Log="Attacked_Package"/>
    </Event_OnAttacked>

    <AIState>
        <Entry UpdateTime="1.0" TargetSearchType="Near" TargetSearchRange="1.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetAction" Action="Idle"/>
            </Event_OnExecute>

            <Branch Condition="(TargetDistance > 0.7)" Execute="Chase"/>
        </Entry>

        <Chase UpdateTime="0.5">
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="MoveAll"/>
            </Event_OnExecute>

            <Branch Condition="(TargetDistance < 0.6)" Execute="Entry"/>

            <Event_OnUpdate>
                <AIEvent Type="SetDirectionToTarget"/>
            </Event_OnUpdate>
        </Chase>
    </AIState>
</AIPackage>