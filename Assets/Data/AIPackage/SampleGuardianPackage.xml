
<AIPackage Name="SampleGuardianPackage" DefaultState="Entry">
    <Event_OnAttacked>
        <AIEvent Type="ExecuteState" Execute="Hit"/>
    </Event_OnAttacked>

    <AIState>
        <Entry UpdateTime="1.0" TargetSearchType="Near" TargetSearchRange="1.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetAction" Action="Idle"/>
            </Event_OnExecute>

            <Branch Condition="(TargetDistance < 2.0)" Execute="Guard"/>
            <Branch Condition="(TargetDistance > 2.0) && TargetExists" Execute="Chase"/>
        </Entry>

        <Chase UpdateTime="0.0">
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="MoveAll"/>
            </Event_OnExecute>

            <Branch Condition="(TargetDistance < 2.0)" Execute="Guard"/>

            <Event_OnUpdate>
                <AIEvent Type="SetDirectionToTarget"/>
            </Event_OnUpdate>
        </Chase>

        <Hit UpdateTime="0.0">
            <Event_OnExecute>
                <AIEvent Type="SetAction" Action="Hit"/>
            </Event_OnExecute>

            <Branch Condition="End == true" Execute="Entry"/>
        </Hit>
        
        <Guard UpdateTime="0.0">
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="Guard"/>
            </Event_OnExecute>
            <Event_OnFrame>
                <AIEvent Type="SetDirectionToTarget"/>
            </Event_OnFrame>

            <Branch Condition="getStat_GuardBroken == 1.0" Execute="GuardBroken"/>
            <Branch Condition="(TargetDistance > 2.0)" Execute="Chase"/>
        </Guard>

        <GuardBroken>
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="JustGuardBroken"/>
            </Event_OnExecute>

            <Branch Condition="End == true" Execute="Entry"/>
            <Branch Condition="getStat_GuardBroken == 0.0" Excuted="Entry"/>
        </GuardBroken>

    </AIState>
</AIPackage>