<ActionGraph Name="SisterChanAction" DefaultAction="AC_Idle" DefaultFramePerSecond="12">

    <AC_Idle MovementType="FrameEvent" DirectionType="Keep" FlipType="Direction">
        <Animation Path="Resources/Sprites/SampleBoss/Idle/" XFlip="true">
            <FrameEvent Type="Movement" StartFrame="0" Friction="12" Speed="0"/>
        </Animation>

        <Branch Condition="End == true" Execute="AC_Idle"/>
    </AC_Idle>

    <AC_Move MovementType="FrameEvent" DirectionType="AI" FlipType="Direction">
        <Animation Path="Resources/Sprites/SampleBoss/MoveAll/" AngleBaseAnimation="True" AngleBaseAnimationCount="1">
            <FrameEvent Type="Movement" StartFrame="0" Friction="0" MaxVelocity="5" Speed="15"/>
        </Animation>

        <Branch Condition="End == true" Execute="AC_Move"/>
    </AC_Move>

    <AC_Hit MovementType="FrameEvent" DirectionType="AttackedPoint" FlipType="Direction">
        <Animation Path="Resources/Sprites/SampleBoss/Hit/" FramePerSecond="1" XFlip="true">
            <FrameEvent Type="Movement" StartFrame="0" Friction="0" Speed="0" Velocity="0"/>
        </Animation>

        <Branch Condition="End == true" Execute="AC_Idle"/>
    </AC_Hit>

    <AC_GuardBroken MovementType="FrameEvent" DirectionType="AttackedPoint" FlipType="Direction">
        <Animation Path="Resources/Sprites/SampleBoss/GuardBroken/" FramePerSecond="1" XFlip="true">
            <FrameEvent Type="Movement" StartFrame="0" Friction="0" Speed="0" Velocity="0"/>
        </Animation>

        <Branch Condition="End == true" Execute="AC_Idle"/>
    </AC_GuardBroken>
    
    <Dead DirectionType="Keep" FlipType="Direction">
        <Animation Path="Resources/Sprites/DummyPlayer/dash/" StartFrame="0" EndFrame="1" XFlip="true">
            <FrameEvent Type="Effect" StartFrame="0" Path="Resources/Sprites/DummyPlayer/dead/" FramePerSecond="0.2" CastShadow="True">
                <Physics UseGravity="True" Velocity="Random_-2.5^2.5 Random_1.5^3.5" Friction="1" Torque="Random_-30^30" AngularFriction="10.0"/>
            </FrameEvent>
            <FrameEvent Type="KillEntity" StartFrame="0"/>
        </Animation>

        <Branch Condition="End == true" Execute="Dead"/>
    </Dead>

    <AC_Kick MovementType="FrameEvent" DirectionType="AI" FlipType="Direction">
        <Animation Path="Resources/Sprites/SampleBoss/Attack/" FramePerSecond="12" XFlip="true">           
        </Animation>

        <Branch Condition="End" Execute="AC_Kick"/>
    </AC_Kick>

    <AC_Chainsaw MovementType="FrameEvent" DirectionType="AI" FlipType="Direction">
        <Animation Path="Resources/Sprites/SampleBoss/Attack/" FramePerSecond="12" XFlip="true">           
        </Animation>

        <Branch Condition="End" Execute="AC_Chainsaw"/>
    </AC_Chainsaw>

    <AC_SelfHeal MovementType="FrameEvent" DirectionType="AI" FlipType="Direction">
        <Animation Path="Resources/Sprites/SampleBoss/Attack/" FramePerSecond="12" XFlip="true">           
        </Animation>

        <Branch Condition="End" Execute="AC_SelfHeal"/>
    </AC_SelfHeal>

    <AC_SwordMissile MovementType="FrameEvent" DirectionType="AI" FlipType="Direction">
        <Animation Path="Resources/Sprites/SampleBoss/Attack/" FramePerSecond="12" XFlip="true">           
        </Animation>

        <Branch Condition="End" Execute="AC_SwordMissile"/>
    </AC_SwordMissile>

</ActionGraph>