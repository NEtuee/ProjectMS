<ActionGraph Name="NajimiChanAction" DefaultAction="AC_Idle" DefaultFramePerSecond="12" DefaultBuff="NajimiBattleDecrementKeep">

    <AC_Idle MovementType="FrameEvent" DirectionType="AI" FlipType="Direction">
        <AnimationHeader MasterPath="Sprites/Enemy/OsananaNajimi/0_default/"/>
        <Animation Preset="1_idle" XFlip="true" Duration="1">
            <FrameEvent Type="Movement" StartTime="0" Friction="12" Speed="0"/>
            <!-- <FrameEvent Type="ApplyBuff" StartTime="0" ApplyBuff="BossHitCountClear"/> -->
        </Animation>

        <Branch Condition="End == true" Execute="AC_Idle"/>
    </AC_Idle>

    <AC_Move MovementType="FrameEvent" DirectionType="AI" FlipType="Direction">
        <AnimationHeader MasterPath="Sprites/Enemy/OsananaNajimi/0_default/"/>
        <Animation Preset="2_move" XFlip="true" Duration="0.5">
            <FrameEvent Type="Movement" StartTime="0" Friction="0" MaxVelocity="5" Speed="15"/>

            <FrameEvent Type="FrameTag" StartTime="0" EndFrame="999" Tag="HitAvail"/>
            <FrameEvent Type="FrameTag" StartTime="0" EndFrame="999" Tag="GbAvail"/>
        </Animation>

        <Branch Condition="End == true" Execute="AC_Move"/>
    </AC_Move>

    <AC_SystemChase MovementType="FrameEvent" DirectionType="AI" FlipType="Direction">
        <AnimationHeader MasterPath="Sprites/Enemy/OsananaNajimi/0_default/"/>
        <Animation Preset="2_move" XFlip="true" Duration="0.1">
            <FrameEvent Type="Movement" StartTime="0" Friction="0" MaxVelocity="20" Speed="40"/>

        </Animation>

        <Branch Condition="End == true" Execute="AC_SystemChase"/>
    </AC_SystemChase>
    
    <!-- Pitch용 대시 -->
    <AC_Dash MovementType="GraphPreset" MovementGraphPreset="Najimi_Dash" DirectionType="AI" FlipType="Direction" DefenceType="Evade">
        <AnimationHeader MasterPath="Sprites/Enemy/OsananaNajimi/0_default/"/>
        <Animation Preset="3_dash" XFlip="true" Duration="1">
            <FrameEvent Type="Test" Log="HitCount 2" Condition="getStat_HitCount == 2.0"/>
            <FrameEvent Type="Test" Log="HitCount 3" Condition="getStat_HitCount == 3.0"/>
            <FrameEvent Type="Test" Log="HitCount 4" Condition="getStat_HitCount == 4.0"/>
            <FrameEvent Type="ApplyBuff" StartTime="0" ApplyBuff="BossHitCountClear"/>
        </Animation>

        <Branch Condition="End" Execute="AC_Dash"/>
    </AC_Dash>

    <AC_Hit MovementType="FrameEvent" DirectionType="AttackedPoint" FlipType="Direction">
        <AnimationHeader MasterPath="Sprites/Enemy/OsananaNajimi/0_default/"/>
        <Animation Preset="4_hit" XFlip="true" Duration="1.25">
            <FrameEvent Type="Movement" StartTime="0" Friction="0" Speed="0" Velocity="0"/>
            <FrameEvent Type="ApplyBuff" StartTime="0" ApplyBuff="BossHitCountIncrease"/>
            <FrameEvent Type="ZoomEffect" Scale="2.8"/>
            <FrameEvent Type="StopUpdate" Time="0.15"/>

            <FrameEvent Type="FrameTag" StartTime="0" EndFrame="999" Tag="HitAvail"/>
            <FrameEvent Type="FrameTag" StartTime="0" EndFrame="999" Tag="GbAvail"/>
        </Animation>

        <Branch Condition="End == true" Execute="AC_Idle"/>
    </AC_Hit>

    <AC_GuardBroken MovementType="FrameEvent" DirectionType="AttackedPoint" FlipType="Direction">
        <AnimationHeader MasterPath="Sprites/Enemy/OsananaNajimi/0_default/"/>
        <Animation Preset="4_hit" XFlip="true" Duration="1.25">
            <FrameEvent Type="Movement" StartTime="0" Friction="0" Speed="0" Velocity="0"/>
            <FrameEvent Type="ApplyBuff" StartTime="0" ApplyBuff="BossHitCountIncrease"/>
            <FrameEvent Type="ZoomEffect" Scale="2.8"/>
            <FrameEvent Type="StopUpdate" Time="0.15"/>
            
            <FrameEvent Type="FrameTag" StartTime="0" EndFrame="999" Tag="HitAvail"/>
            <FrameEvent Type="FrameTag" StartTime="0" EndFrame="999" Tag="GbAvail"/>
        </Animation>

        <Branch Condition="End == true" Execute="AC_Idle"/>
    </AC_GuardBroken>

    <AC_Groggy MovementType="FrameEvent" DirectionType="AttackedPoint" FlipType="Direction">
        <AnimationHeader MasterPath="Sprites/Enemy/OsananaNajimi/0_default/"/>
        <Animation Preset="4_hit" XFlip="true" Duration="1.25">
            <FrameEvent Type="Movement" StartTime="0" Friction="0" Speed="0" Velocity="0"/>
            <FrameEvent Type="ApplyBuff" StartTime="0" ApplyBuff="BattleClear"/>
            <FrameEvent Type="FrameTag" StartTime="0" EndTime="999" Tag="Groggy"/>

            <FrameEvent Type="ZoomEffect" Scale="2.8"/>
            <FrameEvent Type="StopUpdate" Time="0.15"/>
        </Animation>

        <Branch Condition="End == true" Execute="AC_Idle"/>
    </AC_Groggy>
    
    <Dead DirectionType="Keep" FlipType="Direction">
        <AnimationHeader MasterPath="Sprites/Enemy/OsananaNajimi/0_default/"/>
        <Animation Preset="5_dead" XFlip="true" Duration="1">
        </Animation>

        <Branch Condition="End == true" Execute="Dead"/>
    </Dead>

<!-- 페이즈 전환 액션 -->

    <AC_PhaseIncrease MovementType="FrameEvent" DirectionType="AI" FlipType="Direction">
        <AnimationHeader MasterPath="Sprites/Enemy/OsananaNajimi/"/>
        <Animation Preset="4_phaseTransition" XFlip="true" Duration="1.0">
            <!-- 페이즈 전환 중 피격되더라도 무시되어야 함. -->
            <!-- TODO: 페이즈 전환 밀치기 패턴 (노 데미지 군중기) -->
            <FrameEvent Type="ApplyBuff" StartTime="0" ApplyBuff="IncreasePhase"/>
        </Animation>
        
        <Branch Condition="End" Execute="AC_Idle"/>
    </AC_PhaseIncrease>

<!-- 페이즈 전환 액션 -->

<!-- 1페이즈. 일정체력 이하, 또는 일정시간 초과 시 2페이즈로 전이 -->


    <!-- 피격 리액션으로 러시 공격 시 준비 모션 -->
    <AC_RushReady MovementType="FrameEvent" DirectionType="AI" FlipType="Direction">
        <AnimationHeader MasterPath="Sprites/Enemy/OsananaNajimi/"/>
        <Animation Preset="4_phaseTransition" XFlip="true" Duration="0.7">  <!-- TODO: 임시 모션이므로 바꿔줘야함. -->
            <FrameEvent Type="Movement" StartTime="0" Friction="12" Speed="0"/>
            <FrameEvent Type="ApplyBuff" StartTime="0" ApplyBuff="BossHitCountClear"/>
        </Animation>
    
        <Branch Condition="End" Execute="AC_RushReady"/>
    </AC_RushReady>

    <!-- 아카네를 잡기위해 돌진하는 모션, 충돌 시 데미지 적용, 잡기 처리 -->
    <AC_Rush MovementType="FrameEvent" DirectionType="AI" FlipType="Direction">
        <!-- 나지미 돌진, 헛다리 애니메이션. 공격 성공 시 성공 액션으로 전이. -->
        <AnimationHeader MasterPath="Sprites/Enemy/OsananaNajimi/1_rushPattern/1_rush/"/>
        <Animation Preset="1_rushMain" XFlip="true" Duration="0.35">
            <FrameEvent Type="Movement" StartTime="0" Friction="24" MaxVelocity="12" Velocity="12" Speed="0"/>
            <FrameEvent Type="ApplyBuff" StartTime="0" ApplyBuff="NajimiAddRushCount"/>
            <FrameEvent Type="Attack" StartTime="0" EndTime="0.2" AttackPreset="Najimi_Rush" AttackType="Catch" CatchOffset="0.1 0 0">
                <OnCatch>
                    <FrameEvent Type="ApplyBuffTarget" ApplyBuff="CatchedSet"/>
                    
                    <FrameEvent Type="ZoomEffect" Scale="2.8"/>
                    <FrameEvent Type="StopUpdate" Time="0.15"/>
                    
                    <!-- visual -->
                    <FrameEvent Type="Effect" Path="Resources/Sprites/Effect/AttackHit" FramePerSecond="18.0" Offset="0.0 0.0 0.0" Angle="Random_0^360" ToTarget="true"/>
                </OnCatch>
            </FrameEvent>
        </Animation>
        <Animation Preset="2_rushRoll" XFlip="true" Duration="0.25">
            <FrameEvent Type="FrameTag" StartTime="0" EndFrame="999" Tag="HitAvail"/>
            <FrameEvent Type="FrameTag" StartTime="0" EndFrame="999" Tag="GbAvail"/>
        </Animation>
        <Animation Preset="3_rushRecover" XFlip="true" Duration="1.47">
            <FrameEvent Type="FrameTag" StartTime="0" EndFrame="999" Tag="HitAvail"/>
            <FrameEvent Type="FrameTag" StartTime="0" EndFrame="999" Tag="GbAvail"/>
        </Animation>

        <Branch Condition="End" Execute="AC_Idle"/>
    </AC_Rush>

    <!-- 아카네 잡기에 성공하여 꽉 끌어안는 모션 -->
    <AC_RushSuccess_Entry MovementType="FrameEvent" DirectionType="Keep" FlipType="Direction">
        <Animation Preset="Sprites/Enemy/OsananaNajimi/1_rushPattern/2_grab/1_grabPre" XFlip="true" Duration="1.0">
            <FrameEvent Type="Movement" StartTime="0" Friction="12"/>
        </Animation>

        <Branch Condition="getKey_Escape_1 || getKey_Escape_2" Execute="AC_RushSuccess_Struggle"/>
    </AC_RushSuccess_Entry>
    <AC_RushSuccess_Struggle MovementType="FrameEvent" DirectionType="Keep" FlipType="Direction">
        <Animation Preset="Sprites/Enemy/OsananaNajimi/1_rushPattern/3_struggle" XFlip="true" Duration="1.0">
            <FrameEvent Type="Movement" StartTime="0" Friction="12"/>
        </Animation>

        <Branch Condition="getKey_Escape_1 || getKey_Escape_2" Execute="AC_RushSuccess_Entry"/>
    </AC_RushSuccess_Struggle>

    <AC_RushSuccess_Attack MovementType="FrameEvent" DirectionType="Keep" FlipType="Direction">
        <Animation Preset="Sprites/Enemy/OsananaNajimi/1_rushPattern/2_grab/2_grabMain" XFlip="true" Duration="1.0">
            <FrameEvent Type="Movement" StartTime="0" Friction="12"/>
            
            <FrameEvent Type="Attack" StartTime="0" AttackPreset="Najimi_Catch">
                <OnHit>
                    <FrameEvent Type="ApplyBuffTarget" ApplyBuff="1"/>
                    <FrameEvent Type="ZoomEffect" Scale="2.8"/>
                    <FrameEvent Type="StopUpdate" Time="0.15"/>

                    <FrameEvent Type="Effect" Path="Resources/Sprites/Effect/AttackHit" FramePerSecond="18.0" Offset="0.0 0.0 0.0" Angle="Random_0^360" ToTarget="true"/>
                </OnHit>
            </FrameEvent>

            <FrameEvent Type="ReleaseCatch" StartTime="1" Push="1 0 0" Condition="getTargetFrameTag_Recatchable == false"/>
        </Animation>

        <Branch Condition="End" Execute="AC_Idle"/>
    </AC_RushSuccess_Attack>

    <AC_Away MovementType="FrameEvent" DirectionType="Keep" FlipType="Direction">
        <AnimationHeader MasterPath="Sprites/Enemy/OsananaNajimi/1_rushPattern/4_away/"/>
        <Animation Preset="1_awaySpin" XFlip="true" RotationPreset="NajimiAway" Duration="1.0">
            <FrameEvent Type="Movement" StartTime="0" Friction="12" Velocity="-6" Speed="0"/>
            <FrameEvent Type="FrameTag" StartTime="0" EndFrame="999" Tag="HitAvail"/>
            <FrameEvent Type="FrameTag" StartTime="0" EndFrame="999" Tag="GbAvail"/>
        </Animation>
        <Animation Preset="2_awayStand" XFlip="true" Duration="1.0">
            <FrameEvent Type="FrameTag" StartTime="0" EndFrame="999" Tag="HitAvail"/>
            <FrameEvent Type="FrameTag" StartTime="0" EndFrame="999" Tag="GbAvail"/>
        </Animation>

        <Branch Condition="End" Execute="AC_Idle"/>
    </AC_Away>

<!-- 1페이즈 -->
<!-- 2페이즈 -->
    <AC_SpawnPitchingMachine MovementType="FrameEvent" DirectionType="AI" FlipType="Direction">
        <AnimationHeader MasterPath="Sprites/Enemy/OsananaNajimi/2_pitchingPattern/"/>
        <Animation Preset="1_spawnPitchingMachine" XFlip="true" Duration="1.0">
            <FrameEvent Type="Movement" StartTime="0" Friction="12" MaxVelocity="0" Speed="0"/>
            <FrameEvent Type="Danmaku" StartTime="0.5" Path="Enemy\NajimiPitchingMachine.xml"/>
            
            <FrameEvent Type="FrameTag" StartTime="0" EndFrame="999" Tag="HitAvail"/>
            <FrameEvent Type="FrameTag" StartTime="0" EndFrame="999" Tag="GbAvail"/>
        </Animation>

        <Branch Condition="End" Execute="AC_Idle"/>
    </AC_SpawnPitchingMachine>

    <AC_PitcherReady MovementType="FrameEvent" DirectionType="AI" FlipType="Direction">
        <!-- 투구 준비 모션, 탄막 경로 활성화 -->
        <AnimationHeader MasterPath="Sprites/Enemy/OsananaNajimi/2_pitchingPattern/"/>
        <Animation Preset="2_pitcherReady" XFlip="true" Duration="0.85">
            <FrameEvent Type="Movement" StartTime="0" Friction="12" MaxVelocity="0" Speed="0"/>
            <FrameEvent Type="TimelineEffect" StartTime="0" Path="Prefab/Effect/NajimiPitchingBeam_TimeLine" Offset="0.0 0.0 0.0" Attach="true" AngleType="Direction" LifeTime="1.05" FollowDirection="True"/>

            <FrameEvent Type="FrameTag" StartTime="0" EndFrame="999" Tag="HitAvail"/>
            <FrameEvent Type="FrameTag" StartTime="0" EndFrame="999" Tag="GbAvail"/>
        </Animation>

        <Branch Condition="End" Execute="AC_Idle"/>
    </AC_PitcherReady>

    <AC_Pitch MovementType="FrameEvent" DirectionType="Keep" FlipType="Direction">
        <!-- 투구 모션, 장판 활성화 -->
        <AnimationHeader MasterPath="Sprites/Enemy/OsananaNajimi/2_pitchingPattern/3_pitching/"/>
        <Animation Preset="1_pitchingMain" XFlip="true" Duration="1.0">
            <FrameEvent Type="Movement" StartTime="0" Friction="12" MaxVelocity="0" Speed="0"/>
            <!-- TODO: 투구 이펙트 추가해야함. 해당 이펙트 지속시간에 따라 Main 모션 시간과 Attack 지속 시간 조정 -->
            <FrameEvent Type="Attack" StartTime="0.2" AttackPreset="Najimi_Pitching">
                <OnHit>
                    <FrameEvent Type="ApplyBuffTarget" ApplyBuff="1"/>
                    <FrameEvent Type="ApplyBuffTarget" ApplyBuff="StunSet"/>

                    <FrameEvent Type="TimelineEffect" Path="Prefab/Effect/Slash_Timeline" Offset="0.0 0.0 0.0" ToTarget="true" AngleType="AttackPoint"/>
                    <FrameEvent Type="TimelineEffect" Path="Prefab/Effect/Blood_Timeline" Offset="0.0 0.0 0.0" ToTarget="true" AngleType="AttackPoint"/>
                    <FrameEvent Type="TimelineEffect" Path="Prefab/Effect/Impact_Timeline" Offset="0.0 0.0 0.0" Attach="true" ToTarget="true" AngleType="AttackPoint"/>
                    <FrameEvent Type="StopUpdate" Time="0.07"/>
                </OnHit>
            
                <OnGuard>
                    <FrameEvent Type="ApplyBuffTarget" ApplyBuff="1"/>
                    <FrameEvent Type="ApplyBuffTarget" ApplyBuff="StunSet"/>

                    <FrameEvent Type="TimelineEffect" Path="Prefab/Effect/Slash_Timeline" Offset="0.0 0.0 0.0" ToTarget="true" AngleType="AttackPoint"/>
                    <FrameEvent Type="TimelineEffect" Path="Prefab/Effect/Blood_Timeline" Offset="0.0 0.0 0.0" ToTarget="true" AngleType="AttackPoint"/>
                    <FrameEvent Type="TimelineEffect" Path="Prefab/Effect/Impact_Timeline" Offset="0.0 0.0 0.0" Attach="true" ToTarget="true" AngleType="AttackPoint"/>
                    <FrameEvent Type="StopUpdate" Time="0.07"/>
                </OnGuard>
            </FrameEvent>
        </Animation>
        <Animation Preset="2_pitchingRecovery" XFlip="true" Duration="0.3">
            <FrameEvent Type="FrameTag" StartTime="0" EndFrame="999" Tag="HitAvail"/>
            <FrameEvent Type="FrameTag" StartTime="0" EndFrame="999" Tag="GbAvail"/>
        </Animation>

        <Branch Condition="End" Execute="AC_Idle"/>
    </AC_Pitch>
<!-- 2페이즈 -->

<!-- 3페이즈 -->

    <AC_BatonReady MovementType="FrameEvent" DirectionType="AI" FlipType="Direction">
        <AnimationHeader MasterPath="Sprites/Enemy/OsananaNajimi/3_batonPattern/"/>
        <Animation Preset="1_batonReady" XFlip="true" Duration="0.5">
            <FrameEvent Type="Movement" StartTime="0" Friction="12" MaxVelocity="0" Speed="0"/>
        </Animation>

        <Branch Condition="End" Execute="AC_BatonReady"/>
    </AC_BatonReady>

    <AC_BatonSlash MovementType="FrameEvent" DirectionType="AI" FlipType="Direction">
        <AnimationHeader MasterPath="Sprites/Enemy/OsananaNajimi/3_batonPattern/2_batonSlash/"/>
        <Animation Preset="1_batonPre" XFlip="true" Duration="0.13">
            <!-- TODO: 바톤 3연속 공격 카운트용 버프. 향후 이름 수정해야함. (Pistol->Baton)-->
            <FrameEvent Type="ApplyBuff" StartTime="0" ApplyBuff="NajimiAddPistolCount"/>
        </Animation>
        <Animation Preset="2_batonMain" XFlip="true" Duration="0.8">
            <FrameEvent Type="Attack" StartTime="0" AttackPreset="Najimi_BatonSlash">
                <OnHit>
                    <FrameEvent Type="ApplyBuffTarget" ApplyBuff="CommonAttack"/>

                    <FrameEvent Type="TimelineEffect" Path="Prefab/Effect/Slash_Timeline" Offset="0.0 0.0 0.0" ToTarget="true" AngleType="AttackPoint"/>
                    <FrameEvent Type="TimelineEffect" Path="Prefab/Effect/Blood_Timeline" Offset="0.0 0.0 0.0" ToTarget="true" AngleType="AttackPoint"/>
                    <FrameEvent Type="TimelineEffect" Path="Prefab/Effect/Impact_Timeline" Offset="0.0 0.0 0.0" Attach="true" ToTarget="true" AngleType="AttackPoint"/>
                    
                    <FrameEvent Type="TeleportToTargetBack" DistanceOffset="-0.3"/>

                    <FrameEvent Type="StopUpdate" Time="0.07"/>
                </OnHit>
            </FrameEvent>

            <FrameEvent Type="Movement" StartTime="0" Friction="90" MaxVelocity="30" Speed="0" Velocity="30"/>
        </Animation>

        <Branch Condition="End" Execute="AC_Idle"/>
    </AC_BatonSlash>

    <AC_BatonSuccess MovementType="FrameEvent" DirectionType="Keep" RotationType="Direction" FlipType="Direction" DirectionUpdateOnce="true">
        <AnimationHeader MasterPath="Sprites/Enemy/OsananaNajimi/3_batonPattern/"/>
        <Animation Preset="3_batonSlashSuccess" XFlip="true" ScalePreset="YSpring" Duration="0.88">
            <FrameEvent Type="Movement" StartTime="0" Friction="90" MaxVelocity="20" Speed="0"/>

            <FrameEvent Type="Effect" StartTime="0" Path="Resources/Sprites/Effect/Sheath" FramePerSecond="0.5" Offset="0.0 0.0 0.0" Angle="Random_0^360" UseFlip="True" CastShadow="True">
                <Physics UseGravity="True" Velocity="-1.5 3.5" Friction="1.0" Torque="Random_25^30" AngularFriction="10.0"/>
            </FrameEvent>
        </Animation>

        <Branch Condition="End" Execute="AC_Idle"/>
    </AC_BatonSuccess>

    <AC_PistolReady MovementType="FrameEvent" DirectionType="AI" FlipType="Direction" RotationType="Direction">
        <AnimationHeader MasterPath="Sprites/Enemy/OsananaNajimi/3_batonPattern/4_pistolReady/"/>
        <Animation Preset="1_pistol" XFlip="true" Duration="0.5">
            <FrameEvent Type="Movement" StartTime="0" Friction="12" MaxVelocity="0" Speed="0"/>
        </Animation>

        <Branch Condition="End" Execute="AC_PistolReady"/>
    </AC_PistolReady>

    <AC_PistolShot MovementType="FrameEvent" DirectionType="AI" FlipType="Direction" RotationType="Direction">
        <AnimationHeader MasterPath="Sprites/Enemy/OsananaNajimi/3_batonPattern/"/>
        <Animation Preset="5_pistolShot" XFlip="true" Duration="1.0">
            <FrameEvent Type="Danmaku" StartTime="0" Path="Enemy/MagicalFirecrack.xml"/>
        </Animation>

        <Branch Condition="End" Execute="AC_Idle"/>
    </AC_PistolShot>

    <AC_FireworkReady MovementType="FrameEvent" DirectionType="AI" FlipType="Direction" RotationType="Direction">
        <AnimationHeader MasterPath="Sprites/Enemy/OsananaNajimi/3_batonPattern/4_pistolReady/"/>
        <Animation Preset="2_firework" XFlip="true" Duration="0.8">
            <FrameEvent Type="Movement" StartTime="0" Friction="12" MaxVelocity="0" Speed="0"/>
        </Animation>
            

        <Branch Condition="End" Execute="AC_FireworkReady"/>
    </AC_FireworkReady>

    <AC_FireworkShot MovementType="FrameEvent" DirectionType="AI" FlipType="Direction" RotationType="Direction">
        <AnimationHeader MasterPath="Sprites/Enemy/OsananaNajimi/3_batonPattern/"/>
        <Animation Preset="6_fireworkShot" XFlip="true" Duration="1.5">
            <!-- TODO: 바톤 3연속 공격 리셋용 버프. 패턴 변경되면 함께 수정되어야 함. -->
            <FrameEvent Type="ApplyBuff" StartTime="0" ApplyBuff="NajimiResetPistolCount"/>

            <!-- <FrameEvent Type="Projectile" StartTime="0" GraphName="MagicalFireworkBullet" DirectionType="AI" SpawnTargetType="Self"/> -->
            <FrameEvent Type="Danmaku" StartTime="0" Path="Enemy/MagicalFirework.xml"/> 
        </Animation>
    
        <Branch Condition="End" Execute="AC_Idle"/>
    </AC_FireworkShot>

    <AC_BeamReady MovementType="FrameEvent" DirectionType="AI" FlipType="Direction" RotationType="Direction">
        <AnimationHeader MasterPath="Sprites/Enemy/OsananaNajimi/3_batonPattern/4_pistolReady/"/>
        <Animation Preset="3_beam" XFlip="true" Duration="1.0">
            <FrameEvent Type="Movement" StartTime="0" Friction="12" MaxVelocity="0" Speed="0"/>
            <FrameEvent Type="TimelineEffect" Path="Prefab/Effect/NajimiPitchingBeam_TimeLine" Offset="0.0 0.0 0.0" Attach="true" AngleType="Direction" LifeTime="1.0" FollowDirection="True"/>
        </Animation>

        <Branch Condition="End" Execute="AC_BeamReady"/>
    </AC_BeamReady>

    <AC_BeamShot MovementType="FrameEvent" DirectionType="AI" FlipType="Direction" RotationType="Direction">
        <AnimationHeader MasterPath="Sprites/Enemy/OsananaNajimi/3_batonPattern/"/>
        <Animation Preset="7_beamShot" XFlip="true" Duration="2.0">
            <!-- TODO: 빔 이펙트 추가해야함. 해당 이펙트 지속시간에 따라 Main 모션 시간과 Attack 지속 시간 조정 -->
            <FrameEvent Type="Attack" StartTime="0.0" AttackPreset="Najimi_Beam">
                <OnHit>
                    <!-- TODO: 빔 공격 데미지 설정 -->
                    <FrameEvent Type="ApplyBuffTarget" ApplyBuff="1"/>
                    <FrameEvent Type="ApplyBuffTarget" ApplyBuff="StunSet"/>
                    <FrameEvent Type="TimelineEffect" Path="Prefab/Effect/Slash_Timeline" Offset="0.0 0.0 0.0" ToTarget="true" AngleType="AttackPoint"/>
                    <FrameEvent Type="TimelineEffect" Path="Prefab/Effect/Blood_Timeline" Offset="0.0 0.0 0.0" ToTarget="true" AngleType="AttackPoint"/>
                    <FrameEvent Type="TimelineEffect" Path="Prefab/Effect/Impact_Timeline" Offset="0.0 0.0 0.0" Attach="true" ToTarget="true" AngleType="AttackPoint"/>

                    <FrameEvent Type="StopUpdate" Time="0.07"/>
                </OnHit>
            
                <OnGuard>
                    <!-- TODO: 빔 공격 데미지 설정 -->
                    <FrameEvent Type="ApplyBuffTarget" ApplyBuff="1"/>
                    <FrameEvent Type="ApplyBuffTarget" ApplyBuff="StunSet"/>
                    <FrameEvent Type="TimelineEffect" Path="Prefab/Effect/Slash_Timeline" Offset="0.0 0.0 0.0" ToTarget="true" AngleType="AttackPoint"/>
                    <FrameEvent Type="TimelineEffect" Path="Prefab/Effect/Blood_Timeline" Offset="0.0 0.0 0.0" ToTarget="true" AngleType="AttackPoint"/>
                    <FrameEvent Type="TimelineEffect" Path="Prefab/Effect/Impact_Timeline" Offset="0.0 0.0 0.0" Attach="true" ToTarget="true" AngleType="AttackPoint"/>

                    <FrameEvent Type="StopUpdate" Time="0.07"/>
                </OnGuard>
            </FrameEvent>
        </Animation>

        <Branch Condition="End" Execute="AC_Idle"/>
    </AC_BeamShot>

