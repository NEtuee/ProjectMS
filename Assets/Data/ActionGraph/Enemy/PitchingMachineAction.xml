<ActionGraph Name="PitchingMachineAction" DefaultAction="AC_Idle" DefaultFramePerSecond="12">

    <AC_Idle MovementType="FrameEvent" DirectionType="AI" FlipType="Direction">
        <Animation Path="Resources/Sprites/Enemy/PitchingMachine/0_idle/" XFlip="true">
            <FrameEvent Type="Movement" StartFrame="0" Friction="12" Speed="0"/>
        </Animation>

        <Branch Condition="End == true" Execute="AC_Idle"/>
    </AC_Idle>
    
    <AC_Hit MovementType="FrameEvent" DirectionType="Keep" FlipType="Direction">
        <Animation Path="Resources/Sprites/Enemy/PitchingMachine/2_hit/" FramePerSecond="1" XFlip="true">
            <FrameEvent Type="Movement" StartFrame="0" Friction="0" Speed="0" Velocity="0"/>
        </Animation>

        <Branch Condition="End == true" Execute="AC_Idle"/>
    </AC_Hit>

    <AC_GuardBroken MovementType="FrameEvent" DirectionType="Keep" FlipType="Direction">
        <Animation Path="Resources/Sprites/Enemy/PitchingMachine/2_hit/" FramePerSecond="1" XFlip="true">
            <FrameEvent Type="Movement" StartFrame="0" Friction="0" Speed="0" Velocity="0"/>
        </Animation>

        <Branch Condition="End == true" Execute="AC_Idle"/>
    </AC_GuardBroken>
    
    <Dead DirectionType="Keep" FlipType="Direction">
        <Animation Path="Resources/Sprites/Enemy/PitchingMachine/0_idle/" StartFrame="0" EndFrame="1" XFlip="true">
            <FrameEvent Type="Effect" StartFrame="0" Path="Resources/Sprites/Enemy/PitchingMachine/3_dead/part_1" FramePerSecond="0.2" CastShadow="True">
                <Physics UseGravity="True" Velocity="Random_-2.5^2.5 Random_1.5^3.5" Friction="1" Torque="Random_-30^30" AngularFriction="10.0"/>
            </FrameEvent>
            <FrameEvent Type="Effect" StartFrame="0" Path="Resources/Sprites/Enemy/PitchingMachine/3_dead/part_2" FramePerSecond="0.2" CastShadow="True">
                <Physics UseGravity="True" Velocity="Random_-2.5^2.5 Random_1.5^3.5" Friction="1" Torque="Random_-30^30" AngularFriction="10.0"/>
            </FrameEvent>
            <FrameEvent Type="Effect" StartFrame="0" Path="Resources/Sprites/Enemy/PitchingMachine/3_dead/part_3" FramePerSecond="0.2" CastShadow="True">
                <Physics UseGravity="True" Velocity="Random_-2.5^2.5 Random_1.5^3.5" Friction="1" Torque="Random_-30^30" AngularFriction="10.0"/>
            </FrameEvent>
            <FrameEvent Type="KillEntity" StartFrame="0"/>
        </Animation>

        <Branch Condition="End == true" Execute="Dead"/>
    </Dead>

    <AC_Shot MovementType="FrameEvent" DirectionType="AI" FlipType="Direction">
        <!-- 투구 준비 모션, 탄막 경로 활성화 -->
        <Animation Path="Resources/Sprites/Enemy/PitchingMachine/1_pitching" FramePerSecond="1" XFlip="true">
            <FrameEvent Type="Test" StartFrame="0" Log="Shot Execute"/>
            <FrameEvent Type="Danmaku" StartFrame="1" Path="Enemy/MagicalBullet.xml"/>
        </Animation>

        <Branch Condition="End" Execute="AC_Idle"/>
    </AC_Shot>

</ActionGraph>