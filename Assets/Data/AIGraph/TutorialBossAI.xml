    <H_DEF_MoveDodge Package="H_DEF_MoveDodge"> 
    </H_DEF_MoveDodge>

    <H_STA_Defenseless Package="H_STA_Defenseless">
    </H_STA_Defenseless>

    <H_Hit Package="H_Hit">
    </H_Hit>

    <H_END_Dead Package="H_END_Dead">
    </H_END_Dead>

</AIGraph>