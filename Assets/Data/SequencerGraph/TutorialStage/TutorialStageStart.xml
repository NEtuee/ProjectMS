<SequencerGraph Name="TutorialStageStart">

    <InitializePhase>
        <ApplyPostProcessProfile Path="PostProcessProfile/PostProcessProfile_Default"/>

        <SetAudioListner UniqueKey="Player"/>
        <SetCrossHair UniqueKey="Player"/>
        <SetHPSphere UniqueKey="Player"/>

    </InitializePhase>

    <UpdatePhase>
        <QTEFence KeyName="AttackCharge"/>

        <ApplyPostProcessProfile Path="PostProcessProfile/AdditionalTest" BlendTime="0.5" ApplyType="Additional"/>

        <SetAction UniqueKey="Player" Action="SQ_Intro_ToIdle"/>
        <CallAIEvent EventName="EventSignal" UniqueKey="Player" EventTargetType="Range" SearchIdentifier="Enemy" Range="999.0"/>

        <SetCameraPosition TargetPosition="0.0 0.8 0.0"/>
        <ZoomEffect Factor="-0.3"/>

        <ShakeEffect Scale="0.5" Speed="35.0" Time="0.25"/>
        <SetTimeScale Scale="0.0" Time="0.08" BlendTime="0.07"/>

        <!-- <AIMove UniqueKey="Player" StartAction="AIMove_Start" EndAction="AIMove_End" LoopAction="AIMove_Loop" EndPosition="3.0 0.0 0.0"/>

        <AIMove UniqueKey="Player" StartAction="AIMove_Start" EndAction="AIMove_End" LoopAction="AIMove_Loop" EndPosition="3.0 2.0 0.0"/>

        <AIMove UniqueKey="Player" StartAction="AIMove_Start" EndAction="AIMove_End" LoopAction="AIMove_Loop" EndPosition="0.0 0.0 0.0"/>
        <AIMove UniqueKey="Player" StartAction="AIMove_Start" EndAction="AIMove_End" LoopAction="AIMove_Loop" EndPosition="0.1 0.0 0.0"/> -->

        <!-- 스테이지 시퀀서는 스테이지 진행중에 절대 꺼지면 안된다 -->
        <WaitSignal Signal="NeverEnd"/>
    </UpdatePhase>

</SequencerGraph>