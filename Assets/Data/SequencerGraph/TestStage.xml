
<SequencerGraph Name="Test">

    <InitializePhase>
        <ApplyPostProcessProfile Path="PostProcessProfile/PostProcessProfile_Default"/>

        <SetCameraTarget UniqueKey="Player" CameraMode="TargetCenterMode"/>
        <SetAudioListner UniqueKey="Player"/>
        <SetCrossHair UniqueKey="Player"/>

        <SetCameraZoom Size="0.0"/>
        
    </InitializePhase>

    <UpdatePhase>
        <WaitSecond Time="1.0"/>

        <Task ProcessType="AllAtOnce">
            <WaitSecond Time="1.0"/>
            <ToastMessage Text="0"/>
        </Task>

        <Task ProcessType="StepByStep">
            <WaitSecond Time="1.0"/>
            <ToastMessage Text="1"/>
        </Task>
        <Task ProcessType="StepByStep">
            <WaitSecond Time="2.0"/>
            <ToastMessage Text="2"/>
        </Task>

        <WaitSecond Time="3.0"/>
        <ToastMessage Text="3"/>

        <Task ProcessType="StepByStep">
            <WaitSecond Time="0.5"/>
            <AIMove UniqueKey="Player" StartAction="AIMove_Start" EndAction="AIMove_End" LoopAction="AIMove_Loop" EndPositionMarker="TargetMarker"/>
        </Task>

        <AIMove UniqueKey="Test" StartAction="AIMove_Start" EndAction="AIMove_End" LoopAction="AIMove_Loop" EndPositionMarker="TargetMarker"/>
        <ToastMessage Text="Arrive"/>

        <!-- <AIMove UniqueKey="Player" StartAction="AIMove_Start" EndAction="AIMove_End" LoopAction="AIMove_Loop" EndPosition="3.0 0.0 0.0"/>

        <AIMove UniqueKey="Player" StartAction="AIMove_Start" EndAction="AIMove_End" LoopAction="AIMove_Loop" EndPosition="3.0 2.0 0.0"/>

        <AIMove UniqueKey="Player" StartAction="AIMove_Start" EndAction="AIMove_End" LoopAction="AIMove_Loop" EndPosition="0.0 0.0 0.0"/>
        <AIMove UniqueKey="Player" StartAction="AIMove_Start" EndAction="AIMove_End" LoopAction="AIMove_Loop" EndPosition="0.1 0.0 0.0"/> -->

        <!-- 스테이지 시퀀서는 스테이지 진행중에 절대 꺼지면 안된다 -->
        <WaitSignal Signal="NeverEnd"/>
    </UpdatePhase>

</SequencerGraph>