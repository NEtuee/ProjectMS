<ActionGraph Name="ChairObject" DefaultAction="Idle" DefaultFramePerSecond="1">

    <Idle MovementType="Empty" DirectionType="Keep" IgnoreAttackType="Catch">
        <Animation Path="Sprites/Object/Door" XFlip="true">
        </Animation>

        <Branch Condition="End == true" Execute="Idle"/>
    </Idle>

    <Dead MovementType="Empty" DirectionType="Keep">
        <Animation Path="Sprites/Object/Door" XFlip="true" Duration="2">
            <FrameEvent Type="Effect" StartTime="0" Path="Resources/Sprites/Object/Door" FramePerSecond="0.2" CastShadow="True">
                <Physics UseGravity="True" Velocity="Random_-2.5^2.5 Random_1.5^3.5" Friction="1" Torque="Random_-30^30" AngularFriction="10.0"/>
            </FrameEvent>

            <FrameEvent Type="KillEntity" StartTime="0"/>
        </Animation>

        <Branch Condition="End == true" Execute="Dead"/>
    </Dead>

</ActionGraph>