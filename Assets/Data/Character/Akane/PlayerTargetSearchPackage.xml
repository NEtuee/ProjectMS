
<AIPackage Name="PlayerTargetSearchPackage" DefaultState="Entry">
    <AIState>
        <Entry UpdateTime="1.0" TargetSearchType="NearMousePointDirection" TargetSearchRange="2.0" TargetSearchStartRange="0.5" TargetSearchSphereRadius="0.3" AllyTarget="Enemy">
        </Entry>

    </AIState>

    <Event_OnAttacked>
            <AIEvent Type="SetAction" Action="Stun" Condition="(getFrameTag_Catched == false)
                                                                && checkAttackTag_Stun"/>
            <AIEvent Type="SetAction" Action="Hit"  Condition="(getFrameTag_Catched == false)
                                                                && (checkAttackTag_Stun == false)"/>
    </Event_OnAttacked>

    <Event_OnCatched>
        <AIEvent Type="SetDirectionToTarget"/>
        <AIEvent Type="SetAction" Action="Catched"/>
    </Event_OnCatched>
</AIPackage>