<AIPackage Name="SisterDischargePackage" DefaultState="AI_DischargeReady">

    <AIState>
        <AI_Entry UpdateTime="0.0">
            <Event_OnExecute>
                <AIEvent Type="SetAction" Action="AC_Idle"/>
            </Event_OnExecute>
            <Branch Condition="true" Execute="TerminatePackage"/>
        </AI_Entry>

        <AI_DischargeReady UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="50.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="AC_DischargeReady"/>
            </Event_OnExecute>
            
            <Branch Condition="End" Execute="AI_DischargeMain"/>
        </AI_DischargeReady>

        <AI_DischargeMain UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="50.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="AC_DischargeMain"/>
            </Event_OnExecute>
            
            <Branch Condition="End" Execute="AI_DischargeRecover"/>
        </AI_DischargeMain>
        <AI_DischargeRecover UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="50.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="AC_DischargeRecover"/>
            </Event_OnExecute>
            
            <Branch Condition="End" Execute="TerminatePackage"/>
        </AI_DischargeRecover>

        <TerminatePackage>
            <Event_OnExecute>
                <AIEvent Type="TerminatePackage"/>
            </Event_OnExecute>
        </TerminatePackage>
    </AIState>

</AIPackage>