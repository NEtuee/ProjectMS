<AIPackage Name="AobaKickPackage" DefaultState="AI_HitToDodge">

    <AIState>
        <AI_Entry UpdateTime="0.0">
            <Event_OnExecute>
                <AIEvent Type="SetAction" Action="AC_Idle"/>
            </Event_OnExecute>
            <Branch Condition="true" Execute="AI_HitToDodge"/>
        </AI_Entry>

        <AI_HitToDodge UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetAction" Action="AC_HitToDodge"/>
            </Event_OnExecute>
        
            <Branch Condition="EvadeSuccess" Execute="AI_AttackReady"/>
            <Branch Condition="End" Execute="TerminatePackage"/>
        </AI_HitToDodge>

        <AI_AttackReady UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="AC_KickReady"/>
            </Event_OnExecute>

            <Event_OnUpdate>
                <AIEvent Type="SetDirectionToTarget"/>
            </Event_OnUpdate>
            
            <Branch Condition="AttackSuccess || AttackGuarded || AttackGuardBreak || AttackGuardBreakFail" Execute="AI_AttackMain"/>
            <Branch Condition="End" Execute="TerminatePackage"/>
        </AI_AttackReady>

        <AI_AttackMain UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" SearchIdentifier="Player">
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="AC_Kick"/>
            </Event_OnExecute>
            
            <Branch Condition="getFrameTag_MoveCancel" Execute="TerminatePackage"/>
            <Branch Condition="End" Execute="TerminatePackage"/>
        </AI_AttackMain>

        <TerminatePackage>
            <Event_OnExecute>
                <AIEvent Type="TerminatePackage"/>
            </Event_OnExecute>
        </TerminatePackage>

    </AIState>

</AIPackage>