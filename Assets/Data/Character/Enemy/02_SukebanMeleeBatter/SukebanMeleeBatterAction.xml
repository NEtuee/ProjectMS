<ActionGraph Name="SukebanMeleeBatterAction" DefaultAction="AC_Entry" DefaultFramePerSecond="12">
<!-- AnimationHeader MasterPath -->
<GlobalVariable Name="gv_MasterPath" Value="Sprites/Enemy/SukebanMelee_Batter/"/>
<GlobalVariable Name="gv_DeadPath" Value="Sprites/Enemy/SukebanMelee_Batter/0_default/4_dead"/>

<!-- Movement Speed Option Variant Set -->
<GlobalVariable Name="gv_MovementSpeed"             Value="15.0"/>  <!-- Speed는 Velocity = 0 과 병행 사용 불가-->
<GlobalVariable Name="gv_MovementVelocity"          Value="0.0"/>   
<GlobalVariable Name="gv_MovementMaxVelocity"       Value="5.0"/>
<GlobalVariable Name="gv_MovementFriction"          Value="0.0"/>

<!-- AttackReady Movement Speed Option Variant Set-->
<GlobalVariable Name="gv_AtkRdMovementSpeed"        Value="5.0"/>  <!-- Speed는 Velocity = 0 과 병행 사용 불가-->
<GlobalVariable Name="gv_AtkRdMovementVelocity"     Value="0.0"/>   
<GlobalVariable Name="gv_AtkRdMovementMaxVelocity"  Value="5.0"/>
<GlobalVariable Name="gv_AtkRdMovementFriction"     Value="10.0"/>

<!-- Attack Movement Speed Option Variant Set-->
<GlobalVariable Name="gv_AtkMovementSpeed"          Value="0.0"/>   <!-- Speed는 Velocity = 0 과 병행 사용 불가-->
<GlobalVariable Name="gv_AtkMovementVelocity"       Value="24.0"/>  
<GlobalVariable Name="gv_AtkMovementMaxVelocity"    Value="24.0"/>
<GlobalVariable Name="gv_AtkMovementFriction"       Value="24.0"/>

<!-- AttackSuccess Movement Speed Option Variant Set-->
<GlobalVariable Name="gv_AtkSucMovementSpeed"          Value="0.0"/> 
<GlobalVariable Name="gv_AtkSucMovementVelocity"       Value="0.0"/>
<GlobalVariable Name="gv_AtkSucMovementMaxVelocity"    Value="0.0"/>
<GlobalVariable Name="gv_AtkSucMovementFriction"       Value="24.0"/>

<!-- Defualt Action -->
    <AC_Entry MovementType="FrameEvent" DirectionType="AI" FlipType="Direction">
        <AnimationHeader MasterPath="gv_MasterPath"/>
        <Animation Preset="0_default/1_idle" XFlip="true" Duration="1">
            <FrameEvent Type="Movement" StartTime="0" Friction="12" Speed="0"/>
        </Animation>

        <Branch Condition="End == true" Execute="AC_Entry"/>
    </AC_Entry>

    <AC_Idle MovementType="FrameEvent" DirectionType="AI" FlipType="Direction">
        <AnimationHeader MasterPath="gv_MasterPath"/>
        <Animation Preset="0_default/1_idle" XFlip="true" Duration="0.3">
            <FrameEvent Type="Movement" StartTime="0" Friction="12" Speed="0"/>
            
            <FrameEvent Type="ApplyBuff" StartTime="0" ApplyBuff="HitCountClear"/>
            <FrameEvent Type="ApplyBuff" StartTime="0" ApplyBuff="GuardCountClear"/>

            <FrameEvent Type="FrameTag" StartTime="0" EndTime="999" Tag="HitAvail"/>
            <FrameEvent Type="FrameTag" StartTime="0" EndTime="999" Tag="GbAvail"/>            
        </Animation>

        <Branch Condition="End == true" Execute="AC_Idle"/>
    </AC_Idle>

    <AC_Move MovementType="FrameEvent" DirectionType="AI" FlipType="Direction">
        <AnimationHeader MasterPath="gv_MasterPath"/>
        <Animation Preset="0_default/2_move" XFlip="true" Duration="3.5">
            <FrameEvent Type="Movement" Condition="gv_MovementVelocity == 0.0"  StartTime="0" Friction="gv_MovementFriction" MaxVelocity="gv_MovementMaxVelocity" Speed="gv_MovementSpeed"/>
            <FrameEvent Type="Movement" Condition="gv_MovementVelocity > 0.0" StartTime="0" Friction="gv_MovementFriction" MaxVelocity="gv_MovementMaxVelocity" Velocity="gv_MovementVelocity" Speed="gv_MovementSpeed"/>
            <FrameEvent Type="FrameTag" StartTime="0" EndTime="999" Tag="HitAvail"/>
            <FrameEvent Type="FrameTag" StartTime="0" EndTime="999" Tag="GbAvail"/>
        </Animation>

        <Branch Condition="End == true" Execute="AC_Idle"/>
    </AC_Move>

    <AC_Hit MovementType="FrameEvent" DirectionType="AttackedPoint" FlipType="Direction">
        <AnimationHeader MasterPath="gv_MasterPath"/>
        <Animation Preset="0_default/3_hit" XFlip="true" Duration="0.2">
            <FrameEvent Type="AudioPlay" StartTime="0" ID="2202" Attach="true"/>
            <FrameEvent Type="Movement" StartTime="0" Friction="0" Speed="0" Velocity="0"/>
            <FrameEvent Type="ApplyBuff" StartTime="0" ApplyBuff="HitCountIncrease"/>

            <FrameEvent Type="FrameTag" StartTime="0" EndTime="999" Tag="HitAvail"/>
            <FrameEvent Type="FrameTag" StartTime="0" EndTime="999" Tag="GbAvail"/>
        </Animation>

        <Branch Condition="End == true" Execute="AC_Idle"/>
    </AC_Hit>

    <Dead DirectionType="Keep" FlipType="Direction">
        <AnimationHeader MasterPath="gv_MasterPath"/>
        <Animation Preset="0_default/4_dead" XFlip="true" Duration="1">
            <FrameEvent Type="Effect" StartTime="0" Path="gv_DeadPath" FramePerSecond="0.2" CastShadow="True">
                <Physics UseGravity="True" Velocity="Random_-2.5^2.5 Random_1.5^3.5" Friction="1" Torque="Random_-30^30" AngularFriction="10.0"/>
            </FrameEvent>

            <FrameEvent Type="KillEntity" StartTime="0"/>
        </Animation>

        <Branch Condition="End == true" Execute="Dead"/>
    </Dead>

    <AC_PeaceMotionLoop MovementType="FrameEvent" DirectionType="Keep" FlipType="Direction">
        <AnimationHeader MasterPath="gv_MasterPath"/>
        <Animation Preset="0_default/5_peace/1_loop" XFlip="true" Duration="0.1">
            <FrameEvent Type="Movement" StartTime="0" Friction="12" Speed="0"/>
            
            <FrameEvent Type="ApplyBuff" StartTime="0" ApplyBuff="HitCountClear"/>
            <FrameEvent Type="ApplyBuff" StartTime="0" ApplyBuff="GuardCountClear"/>

            <FrameEvent Type="FrameTag" StartTime="0" EndTime="999" Tag="HitAvail"/>
            <FrameEvent Type="FrameTag" StartTime="0" EndTime="999" Tag="GbAvail"/>
            
        </Animation>

        <Branch Condition="End == true" Execute="AC_Idle"/>
    </AC_PeaceMotionLoop>

    <AC_PeaceMotionEnd MovementType="FrameEvent" DirectionType="AI" FlipType="Direction">
        <AnimationHeader MasterPath="gv_MasterPath"/>
        <Animation Preset="0_default/5_peace/2_end" XFlip="true" Duration="0.1">
            <FrameEvent Type="Movement" StartTime="0" Friction="12" Speed="0"/>
            <FrameEvent Type="FrameTag" StartTime="0" EndTime="999" Tag="HitAvail"/>
            <FrameEvent Type="FrameTag" StartTime="0" EndTime="999" Tag="GbAvail"/>
            
        </Animation>

        <Branch Condition="End == true" Execute="AC_Idle"/>
    </AC_PeaceMotionEnd>
<!-- Defualt Action -->

<!-- Skill : Swing 1번째 공격-->
    <AC_AttackReady MovementType="FrameEvent" DirectionType="AI" FlipType="Direction" Flags="OutlineSuperArmor">
        <AnimationHeader MasterPath="gv_MasterPath"/>
        <Animation Preset="2_skill/1_rushSwing/1_attackReady" XFlip="true" Duration="0.4">            
            <FrameEvent Type="Movement" StartTime="0" Friction="0.0" MaxVelocity="0.0" Speed="0.0"/>
            <FrameEvent Type="FrameTag" StartTime="0" EndTime="999" Tag="GbAvail"/>
        </Animation>

        <Branch Condition="End" Execute="AC_Idle"/>
    </AC_AttackReady>

    <AC_AttackRush MovementType="FrameEvent" DirectionType="Keep" FlipType="Direction" RotationType="Direction" Flags="OutlineSuperArmor">
        <AnimationHeader MasterPath="gv_MasterPath"/>
        <Animation Preset="2_skill/1_rushSwing/2_attackRush" XFlip="true" Duration="0.35">
            <FrameEvent Type="AudioPlay" StartTime="0" ID="4901" Attach="true"/>
            <FrameEvent Type="Movement" StartTime="0" Friction="24.0" MaxVelocity="16.0" Velocity="16.0" Speed="0.0"/>           
            <FrameEvent Type="Attack" StartTime="0" EndTime="0.2" AttackPreset="SukebanMeleeBatter">
                <OnHit>
                    <FrameEvent Type="AudioPlay" StartTime="0" ID="4908" Attach="true"/>
                    <FrameEvent Type="ApplyBuffTarget" ApplyBuff="TestProjectileAttack"/>

                    <FrameEvent Type="EffectPreset" StartTime="0" Key="Slash"/>
                    <FrameEvent Type="EffectPreset" StartTime="0" Key="Blood"/>
                    
                    <FrameEvent Type="StopUpdate" Time="0.1"/>
                    <FrameEvent Type="SetTimeScale" Scale="0.1" Time="0.1" BlendTime="0.1"/>
                    <FrameEvent Type="ShakeEffect" Scale="0.1" Speed="10.0" Time="0.1"/>
                </OnHit>
            </FrameEvent>
            <FrameEvent Type="FrameTag" StartTime="0" EndTime="999" Tag="GbAvail"/>
        </Animation>

        <Branch Condition="End" Execute="AC_Idle"/>
    </AC_AttackRush>

    <AC_AttackSuccess MovementType="FrameEvent" DirectionType="Keep" FlipType="Direction" RotationType="Direction">
        <AnimationHeader MasterPath="gv_MasterPath"/>
        <Animation Preset="2_skill/1_rushSwing/3_attacksuccess" XFlip="true" Duration="0.2">
            <FrameEvent Type="Movement" StartTime="0" Friction="40.0" MaxVelocity="0.0" Speed="0.0"/>
        </Animation>

        <Branch Condition="End == true" Execute="AC_AttackRecover"/>
    </AC_AttackSuccess>

    <AC_AttackRecover MovementType="FrameEvent" DirectionType="AI" FlipType="Direction">
        <AnimationHeader MasterPath="gv_MasterPath"/>
        <Animation Preset="2_skill/1_rushSwing/4_attackRecover" XFlip="true" Duration="0.5">
            <FrameEvent Type="FrameTag" StartTime="0" EndTime="999" Tag="HitAvail"/>
            <FrameEvent Type="FrameTag" StartTime="0" EndTime="999" Tag="GbAvail"/>
        </Animation>

        <Branch Condition="End" Execute="AC_Idle"/>
    </AC_AttackRecover>

<!-- Skill: Grenade  -->
    <AC_GrenadeReady MovementType="FrameEvent" DirectionType="AI" FlipType="Direction" RotationType="Direction" Flags="LaserEffect">
        <AnimationHeader MasterPath="gv_MasterPath"/>
        <Animation Preset="2_skill/2_grnadeSwing/1_grenadeReady" XFlip="true" Duration="0.8">
            <FrameEvent Type="Movement" StartTime="0" Friction="0.0" MaxVelocity="0.0" Speed="0.0"/>

            <FrameEvent Type="FrameTag" StartTime="0" EndTime="999" Tag="HitAvail"/>
            <FrameEvent Type="FrameTag" StartTime="0" EndTime="999" Tag="GbAvail"/>
            
            <FrameEvent Type="SetDirectionType" StartTime="0.7" DirectionType="Keep"/>  <!-- 타겟 추적 중단용 이벤트 -->
        </Animation>
    
        <Branch Condition="End" Execute="AC_Idle"/>
    </AC_GrenadeReady>

    <AC_GrenadeSmash MovementType="FrameEvent" DirectionType="Keep" FlipType="Direction" RotationType="Direction" Flags="LaserEffect">
        <AnimationHeader MasterPath="gv_MasterPath"/>
        <Animation Preset="2_skill/2_grnadeSwing/2_grenadeSmash" XFlip="true" Duration="0.3">
            <FrameEvent Type="AudioPlay" StartTime="0" ID="4901" Attach="true"/>
            <FrameEvent Type="SetDirectionType" StartTime="0" DirectionType="AI"/>
            <FrameEvent Type="Movement" StartTime="0" Friction="0.0" MaxVelocity="0.0" Speed="0.0"/>

            <!-- Danmaku Attack -->
            <FrameEvent Type="SpawnCharacter" StartTime="0" CharacterKey="BigGrenade" Offset="0 0 0" UseFlip="true"/>

            <FrameEvent Type="FrameTag" StartTime="0" EndTime="999" Tag="HitAvail"/>
            <FrameEvent Type="FrameTag" StartTime="0" EndTime="999" Tag="GbAvail"/>
        </Animation>

        <Branch Condition="End" Execute="AC_GrenadeRecover"/>
    </AC_GrenadeSmash>

    <AC_GrenadeRecover MovementType="FrameEvent" DirectionType="AI" FlipType="Direction">
        <AnimationHeader MasterPath="gv_MasterPath"/>
        <Animation Preset="2_skill/2_grnadeSwing/3_grenadeRecover" XFlip="true" Duration="0.12">
            <FrameEvent Type="FrameTag" StartTime="0" EndTime="999" Tag="HitAvail"/>
            <FrameEvent Type="FrameTag" StartTime="0" EndTime="999" Tag="GbAvail"/>
        </Animation>

        <Branch Condition="End" Execute="AC_Entry"/>
    </AC_GrenadeRecover>

<!-- Defense Action -->

    <AC_Guard MovementType="FrameEvent" DirectionType="AI" FlipType="Direction" DefenceType="Guard" DefenceDirectionType="Direction" DefenceAngle="180">
        <AnimationHeader MasterPath="gv_MasterPath"/>
        <Animation Preset="1_defense/1_guard" XFlip="true" Duration="0.5">
            <FrameEvent Type="Movement" StartTime="0" Friction="0" Speed="0" Velocity="0"/>
            <FrameEvent Type="ApplyBuff" Condition="DefenceSuccess" StartTime="0" EndTime="999" ApplyBuff="GuardCountIncrease"/>

            <FrameEvent Type="FrameTag" StartTime="0" EndTime="999" Tag="HitAvail"/>
            <FrameEvent Type="FrameTag" StartTime="0" EndTime="999" Tag="GbAvail"/>
        </Animation>

        <Branch Condition="End == true" Execute="AC_Guard"/>
    </AC_Guard>

    <AC_GuardBroken MovementType="FrameEvent" DirectionType="AttackedPoint" FlipType="Direction">
        <AnimationHeader MasterPath="gv_MasterPath"/>
        <Animation Preset="1_defense/2_guardBroken" XFlip="true" Duration="1.25">
            <FrameEvent Type="AudioPlay" StartTime="0" ID="2202" Attach="true"/>
            <FrameEvent Type="Movement" StartTime="0" Friction="0" Speed="0" Velocity="0"/>
            <FrameEvent Type="ApplyBuff" StartTime="0" ApplyBuff="HitCountIncrease"/>
            <FrameEvent Type="ApplyBuff" StartTime="0" ApplyBuff="GuardCountClear"/>

            <FrameEvent Type="FrameTag" StartTime="0" EndTime="999" Tag="HitAvail"/>
            <FrameEvent Type="FrameTag" StartTime="0" EndTime="999" Tag="GbAvail"/>
        </Animation>

        <Branch Condition="End == true" Execute="AC_Idle"/>
    </AC_GuardBroken>
    
<!-- Defense Action -->


</ActionGraph>