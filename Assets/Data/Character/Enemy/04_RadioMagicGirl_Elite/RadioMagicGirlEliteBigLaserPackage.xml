<AIPackage Name="RadioMagicGirlEliteBigLaserPackage" DefaultState="AI_Entry">

    <AIState>
        <AI_Entry UpdateTime="0.0">
            <Event_OnExecute>
                <AIEvent Type="SetAction" Action="AC_Idle"/>
            </Event_OnExecute>
            <Branch Condition="true" Execute="AI_BigLaserReady"/>
        </AI_Entry>

        <AI_BigLaserReady UpdateTime="0.0">
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="AC_BigLaserReady"/>
            </Event_OnExecute>
            <Branch Condition="true" Execute="AI_Dodge_A"/>
        </AI_BigLaserReady>

        <AI_BigLaserMain UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.9" AllyTarget="Enemy">
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="AC_BigLaserMain"/>
            </Event_OnExecute>

            </Event_OnExecute>
            <Branch Condition="true" Execute="AI_BigLaserRecover"/>
            <Branch Condition="Attacksucess" Execute="AI_AttackSuccess"/>
        </AI_BigLaserMain>

        <AI_AttackSuccess UpdateTime="0.0" TargetSearchType="Near" TrgetSearchRange="999.0" AllyTarget="Enemy">
            <Event_OnExecute>

                <AIEvent Type="SetAction" Action="AC_AttackSuccess"/>
            </Event_OnExecute>

            <Event_OnUpdate>
                <AIEvent Type="SetDirectionToTarget" Speed="400"/>
            </Event_OnUpdate>
            
            <Branch Condition="End" Execute="AI_BigLaserRecover"/>
        </AI_AttackSuccess>

        <AI_BigLaserRecover UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" AllyTarget="Enemy">
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="AC_BigLaserRecover"/>
            </Event_OnExecute>
            
            <Branch Condition="End" Execute="AI_DodgeReady_E"/>
        </AI_BigLaserRecover>

        <AI_DodgeReady_E UpdateTime="0.0">
            <Event_OnExecute>
                <AIEvent Type="SetAction" Action="AC_DodgeLaserTPReady_E"/>
            </Event_OnExecute>
            <Branch Condition="true" Execute="AI_Dodge_E"/>
        </AI_DodgeReady_E>

        <AI_Dodge_E UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.9" AllyTarget="Enemy">
            <Event_OnExecute>
                <AIEvent Condition="AngleDirectionToTarget < 180.0" Type="SetDirectionToTarget" Angle="150"/>
                <AIEvent Condition="AngleDirectionToTarget >= 180.0" Type="SetDirectionToTarget" Angle="210"/>
                <AIEvent Type="SetAction" Action="AC_DodgeLaserTP_E"/>
            </Event_OnExecute>

            <Branch Condition="End || getFrameTag_Cancel" Execute="AI_DodgeLaserReady_E"/>
        </AI_Dodge_E>

        <AI_DodgeLaserReady_E UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" AllyTarget="Enemy">
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="AC_DodgeLaserMain_E"/>
            </Event_OnExecute>

            <Event_OnUpdate>
                <AIEvent Type="SetDirectionToTarget" Speed="400"/>
            </Event_OnUpdate>
            
            <Branch Condition="End" Execute="AI_DodgeLaserMain_E"/>
        </AI_DodgeLaserReady_E>

        <AI_DodgeLaserMain_E UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" AllyTarget="Enemy">
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="AC_DodgeLaserMain_E"/>
            </Event_OnExecute>
            
            <Branch Condition="End" Execute="AI_AttackRecover"/>
        </AI_DodgeLaserMain_E>

        <AI_AttackRecover UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" AllyTarget="Enemy">
            <Event_OnExecute>
                <AIEvent Type="SetAction" Action="AC_DodgeLaserRecover"/>
            </Event_OnExecute>
            
            <Branch Condition="End" Execute="TerminatePackage"/>
        </AI_AttackRecover>

        <TerminatePackage>
            <Event_OnExecute>
                <AIEvent Type="TerminatePackage"/>
            </Event_OnExecute>
        </TerminatePackage>

    </AIState>

</AIPackage>