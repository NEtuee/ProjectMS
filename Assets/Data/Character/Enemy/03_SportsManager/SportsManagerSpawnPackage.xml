<AIPackage Name="SportsManagerSpawnPackage" DefaultState="AI_SpawnMachine">

    <AIState>
        <AI_Entry UpdateTime="0.0">
            <Event_OnExecute>
                <AIEvent Type="SetAction" Action="AC_Idle"/>
            </Event_OnExecute>
            <Branch Condition="true" Execute="TerminatePackage"/>
        </AI_Entry>

        <AI_SpawnMachine UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" AllyTarget="Enemy">
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="AC_SpawnMachine"/>
            </Event_OnExecute>

            <Event_OnUpdate>
                <AIEvent Type="SetDirectionToTarget" Speed="600"/>
            </Event_OnUpdate>
            
            <Branch Condition="End" Execute="TerminatePackage"/>
        </AI_SpawnMachine>

        <AI_SpawnRunner UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" AllyTarget="Enemy">
            <Event_OnExecute>
                <AIEvent Type="SetAction" Action="AC_SpawnRunner"/>
            </Event_OnExecute>
            
            <Branch Condition="End" Execute="TerminatePackage"/>
        </AI_SpawnRunner>

        <TerminatePackage>
            <Event_OnExecute>
                <AIEvent Type="TerminatePackage"/>
            </Event_OnExecute>
        </TerminatePackage>

    </AIState>

</AIPackage>