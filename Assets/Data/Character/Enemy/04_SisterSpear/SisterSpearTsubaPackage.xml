<AIPackage Name="SisterSpearTsubaPackage" DefaultState="AI_Tsuba">

    <AIState>
        <AI_Tsuba UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" AllyTarget="Enemy">
            <Event_OnExecute>    
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="AC_Tsuba"/>
            </Event_OnExecute>
            
            <Branch Weight="RandBoolean^True" Condition="AttackCatchTarget" Execute="AI_TsubaEntry_Normal"/>
            <Branch Weight="RandBoolean^False" Condition="AttackCatchTarget" Execute="AI_TsubaEntry_Long"/>
            <Branch Condition="End" Execute="TerminatePackage"/>
        </AI_Tsuba>

        <AI_TsubaEntry_Normal UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" AllyTarget="Enemy">
            <Event_OnExecute>
                <AIEvent Type="Test" Log="AI Rush Success"/>
                <AIEvent Type="SetAction" Action="AC_TsubaEntry"/>
            </Event_OnExecute>

            <Branch Condition="(PackageExecutedTime >= 1.2)" Execute="AI_TsubaAttack"/>
            <Branch Condition="IsCatcher == false" Execute="AI_TsubaAway"/>
        </AI_TsubaEntry_Normal>

        <AI_TsubaEntry_Long UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" AllyTarget="Enemy">
            <Event_OnExecute>
                <AIEvent Type="Test" Log="AI Rush Success"/>
                <AIEvent Type="SetAction" Action="AC_TsubaEntry"/>
            </Event_OnExecute>

            <Branch Condition="(PackageExecutedTime >= 1.4)" Execute="AI_TsubaAttack"/>
            <Branch Condition="IsCatcher == false" Execute="AI_TsubaAway"/>
        </AI_TsubaEntry_Long>

        <AI_TsubaAttack UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" AllyTarget="Enemy">
            <Event_OnExecute>
                <AIEvent Type="SetAction" Action="AC_TsubaAttack"/>
            </Event_OnExecute>
            
            <Branch Condition="End" Execute="TerminatePackage"/>
        </AI_TsubaAttack>
    
        <AI_TsubaAway UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" AllyTarget="Enemy">
            <Event_OnExecute>
                <AIEvent Type="SetAction" Action="AC_TsubaAway"/>
            </Event_OnExecute>
        
            <Branch Condition="End" Execute="TerminatePackage"/>
        </AI_TsubaAway>

        <TerminatePackage>
            <Event_OnExecute>
                <AIEvent Type="TerminatePackage"/>
            </Event_OnExecute>
        </TerminatePackage>

    </AIState>

</AIPackage>