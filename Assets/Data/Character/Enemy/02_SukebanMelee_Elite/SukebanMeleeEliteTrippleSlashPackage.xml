<AIPackage Name="SukebanMeleeEliteTrippleSlashPackage" DefaultState="AI_Entry">

    <AIState>
        <AI_Entry UpdateTime="0.0">
            <Event_OnExecute>
                <AIEvent Type="SetAction" Action="AC_Idle"/>
            </Event_OnExecute>
            <Branch Condition="true" Execute="AI_AttackReady"/>
        </AI_Entry>

        <AI_AttackReady UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" AllyTarget="Enemy">
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="AC_TrippleSlashReady"/>
            </Event_OnExecute>

            <Event_OnUpdate>
                <AIEvent Type="SetDirectionToTarget" Speed="400"/>
            </Event_OnUpdate>
            
            <Branch Condition="End" Execute="AI_AttackMain_A"/>
        </AI_AttackReady>
        <AI_AttackMain_A UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" AllyTarget="Enemy">
            <Event_OnExecute>
                <AIEvent Type="SetAction" Action="AC_TrippleSlashMain_A"/>
            </Event_OnExecute>
            
            <Branch Condition="End" Execute="AI_Dodge_A"/>
        </AI_AttackMain_A>
        <AI_Dodge_A UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.9" AllyTarget="Enemy">
            <Event_OnExecute>
                <AIEvent Condition="AngleDirectionToTarget < 180.0" Type="SetDirectionToTarget" Angle="150"/>
                <AIEvent Condition="AngleDirectionToTarget >= 180.0" Type="SetDirectionToTarget" Angle="210"/>
                <AIEvent Type="SetAction" Action="AC_TrippleSlash_Dodge"/>
            </Event_OnExecute>

            <Branch Condition="End || getFrameTag_Cancel" Execute="AI_AttackMain_B"/>
        </AI_Dodge_A>
        <AI_AttackMain_B UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" AllyTarget="Enemy">
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="AC_TrippleSlashMain_B"/>
            </Event_OnExecute>
            
            <Branch Condition="End" Execute="AI_Dodge_B"/>
        </AI_AttackMain_B>
        <AI_Dodge_B UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.9" AllyTarget="Enemy">
            <Event_OnExecute>
                <AIEvent Condition="AngleDirectionToTarget < 180.0" Type="SetDirectionToTarget" Angle="150"/>
                <AIEvent Condition="AngleDirectionToTarget >= 180.0" Type="SetDirectionToTarget" Angle="210"/>
                <AIEvent Type="SetAction" Action="AC_TrippleSlash_Dodge"/>
            </Event_OnExecute>

            <Branch Condition="End || getFrameTag_Cancel" Execute="AI_AttackMain_C"/>
        </AI_Dodge_B>
        <AI_AttackMain_C UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" AllyTarget="Enemy">
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="AC_TrippleSlashMain_C"/>
            </Event_OnExecute>
            
            <Branch Condition="End" Execute="AI_AttackRecover"/>
        </AI_AttackMain_C>
        <AI_AttackRecover UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" AllyTarget="Enemy">
            <Event_OnExecute>
                <AIEvent Type="SetAction" Action="AC_TrippleSlashRecover"/>
            </Event_OnExecute>
            
            <Branch Condition="End" Execute="TerminatePackage"/>
        </AI_AttackRecover>

        <TerminatePackage>
            <Event_OnExecute>
                <AIEvent Type="TerminatePackage"/>
            </Event_OnExecute>
        </TerminatePackage>

    </AIState>

</AIPackage>