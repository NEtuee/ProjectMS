<AIPackage Name="BigGrenadePackage" DefaultState="Entry">

    <AIState>

        <Entry UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" AllyTarget="Enemy">
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="Move"/>
            </Event_OnExecute>
        </Entry>

        <AI_Reverse UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" AllyTarget="Enemy">
            <Event_OnExecute>
                <AIEvent Type="SetAction" Action="AC_Reverse"/>
            </Event_OnExecute>
            <Branch Condition="End" Execute="Explo"/>
        </AI_Reverse>
        
        <Explo UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.0" AllyTarget="Enemy">
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="Explosion"/>
            </Event_OnExecute>
        </Explo>

    </AIState>

</AIPackage>