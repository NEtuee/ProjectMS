<AIPackage Name="BeerBoxPackage" DefaultState="AI_Hit">

    <AIState>
        <AI_Hit UpdateTime="0.0">
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="AC_Hit"/>
            </Event_OnExecute>

            <Branch Condition="End" Execute="AI_BeerShot"/>
        </AI_Hit>

        <AI_BeerShot UpdateTime="0.0">
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="AC_BeerShot"/>
            </Event_OnExecute>

            <Branch Condition="End" Execute="AI_Dead"/>
        </AI_BeerShot>

        <AI_Dead UpdateTime="0.0">
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="Dead"/>
            </Event_OnExecute>

            <Branch Condition="End" Execute="AI_Dead"/>
        </AI_Dead>

    </AIState>

</AIPackage>