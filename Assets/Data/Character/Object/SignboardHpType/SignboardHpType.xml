<ActionGraph Name="SignboardHpType" DefaultAction="AC_Idle" DefaultFramePerSecond="12">

    <AC_Idle MovementType="FrameEvent" DirectionType="AlwaysRight">
        <Animation Preset="Sprites/Object/SignboardHpType/1_idle" XFlip="false" Duration="1">
        <FrameEvent Type="Movement" StartTime="0" Friction="0" Velocity="0" MaxVelocity="0" Speed="0"/>
        </Animation>

        <Branch Condition="End == true" Execute="AC_Idle"/>
        <Branch Condition="GuardBreakFail == true" Execute="AC_Bepushed"/>
        <Branch Condition="Hit == true" Execute="AC_Withstand"/>
    </AC_Idle>

    <AC_Withstand MovementType="FrameEvent" DirectionType="AttackedPoint">
        <Animation Preset="Sprites/Object/SignboardHpType/2_withstand" XFlip="false" Duration="1">
            <FrameEvent Type="Movement" StartTime="0" Friction="10" Velocity="40" MaxVelocity="40"/>
        </Animation>

        <Branch Condition="End == true" Execute="AC_Idle"/>
        <Branch Condition="Dead == true" Execute="Dead"/>
    </AC_Withstand>

    <AC_Bepushed MovementType="FrameEvent" DirectionType="AttackedPoint">
        <Animation Preset="Sprites/Object/SignboardHpType/3_Bepushed" XFlip="false" Duration="1">
            <FrameEvent Type="Movement" StartTime="0" Friction="1" Velocity="-40" MaxVelocity="40" Speed="0"/>
        </Animation>

        <Branch Condition="End == true" Execute="AC_Idle"/>
        <Branch Condition="Dead == true" Execute="Dead"/>
    </AC_Bepushed>
    
    <AC_Dead MovementType="FrameEvent" DirectionType="AlwaysRight">
        <Animation Preset="Sprites/Object/SignboardHpType/4_dead" XFlip="false" Duration="1">

            <FrameEvent Type="Effect" StartTime="0" Path="Sprites/Object/SignboardHpType/4_dead" FramePerSecond="0.2" CastShadow="True">
                <Physics UseGravity="True" Velocity="Random_-2.5^2.5 Random_1.5^3.5" Friction="1" Torque="Random_-30^30" AngularFriction="10.0"/>
            </FrameEvent>
            <FrameEvent Type="KillEntity" StartTime="0"/>

        </Animation>

        <Branch Condition="End == true" Execute="Dead"/>
    </AC_Dead>

</ActionGraph>