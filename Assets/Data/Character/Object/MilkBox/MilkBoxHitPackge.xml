<AIPackage Name="MilkBoxHitPackge" DefaultState="AI_Idle">

    <AIState>
        <AI_Idle UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.9" AllyTarget="Enemy">
            <Event_OnExecute>
                <AIEvent Type="SetAction" Action="AC_Idle"/>
            </Event_OnExecute>
            
            <Branch Condition="End == true" Execute="AI_Idle"/>
            <Branch Condition="Hit" Execute="AI_Hit"/>
        </AI_Idle>

        <AI_Hit UpdateTime="0.0" TargetSearchType="Near" TargetSearchRange="999.9" AllyTarget="Enemy">
            <Event_OnExecute>
                <AIEvent Type="SetAngleDirection" Angle="0"/>
                <AIEvent Type="SetAction" Action="AC_Hit"/>
            </Event_OnExecute>
            
            <Branch Condition="End == true" Execute="AI_Dead"/>
        </AI_Hit>

        <AI_Dead UpdateTime="999.0">
            <Event_OnExecute>
               <AIEvent Type="SetAction" Action="Dead"/>
               <AIEvent Type="TerminatePackage"/>
            </Event_OnExecute>
        </AI_Dead>

    </AIState>

</AIPackage>