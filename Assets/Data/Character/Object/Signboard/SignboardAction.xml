<ActionGraph Name="Signboard" DefaultAction="AC_Idle" DefaultFramePerSecond="12">

    <AC_Idle MovementType="Empty" DirectionType="AlwaysRight" FlipType="AlwaysTurnOff" RotationType="AlwaysRight">
        <Animation Preset="Sprites/Object/Signboard/1_idle" XFlip="false" Duration="1">
        </Animation>

        <Branch Condition="End == true" Execute="AC_Idle"/>
    </AC_Idle>

    <AC_Hit MovementType="Empty" DirectionType="AlwaysRight" FlipType="AlwaysTurnOff" RotationType="AlwaysRight">
        <Animation Preset="Sprites/Object/Signboard/2_hit" XFlip="false" Duration="1">
        </Animation>

        <Branch Condition="End == true" Execute="AC_Idle"/>
    </AC_Hit>

    <AC_GuardBroken MovementType="FrameEvent" DirectionType="AttackedPoint" DirectionAngle="180">
        <Animation Preset="Sprites/Object/SignboardRotationType/3_GuardBroken" XFlip="false" Duration="0.1">
            <FrameEvent Type="Movement" StartTime="0" Friction="1" Velocity="4" MaxVelocity="4" Speed="0"/>
        </Animation>

        <Branch Condition="End == true" Execute="AC_Idle"/>
    </AC_GuardBroken>

    <Dead MovementType="Empty" DirectionType="AlwaysRight" FlipType="AlwaysTurnOff" RotationType="AlwaysRight">
        <Animation Preset="Sprites/Object/Signboard/3_dead" XFlip="false" Duration="1">

            <FrameEvent Type="Effect" StartTime="0" Path="Sprites/Object/Signboard/3_dead" FramePerSecond="0.2" CastShadow="True">
                <Physics UseGravity="True" Velocity="Random_-2.5^2.5 Random_1.5^3.5" Friction="1" Torque="Random_-30^30" AngularFriction="10.0"/>
            </FrameEvent>
            <FrameEvent Type="KillEntity" StartTime="0"/>

        </Animation>

        <Branch Condition="End == true" Execute="Dead"/>
    </Dead>

</ActionGraph>