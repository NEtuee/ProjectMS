<ActionGraph Name="TransparentBindingBulletAction" DefaultAction="AC_Idle" DefaultFramePerSecond="12">

    <AC_Idle MovementType="FrameEvent" DirectionType="AI" RotationType="Direction">
        <Animation Preset="Sprites/Object/TransparentBindingBullet/1_Idle" XFlip="false" Duration="0.3">
        </Animation>

        <Branch Condition="End == true" Execute="AC_Idle"/>
    </AC_Idle>

    <AC_Move MovementType="FrameEvent" DirectionType="AI" FlipType="Direction" RotationType="Direction">
        <Animation Preset="Sprites/Object/TransparentBindingBullet/3_Move" XFlip="true" Duration="2">
            <FrameEvent Type="Movement" StartTime="0" Friction="0" MaxVelocity="10" Speed="10"/>
            <FrameEvent Type="Attack" StartTime="0" EndTime="0.5" AttackPreset="Common_Radius50" NotifyAttackSuccess="False">
                <OnHit>
                </OnHit>
            </FrameEvent>
            <FrameEvent Type="FrameTag" StartTime="0" EndTime="999" Tag="HitAvail"/>
            <FrameEvent Type="FrameTag" StartTime="0" EndTime="999" Tag="GbAvail"/>
        </Animation>

        <Branch Condition="End == true" Execute="AC_Move"/>
    </AC_Move>

    <AC_Launch MovementType="FrameEvent" DirectionType="AI" RotationType="Direction">
        <Animation Preset="Sprites/Object/TransparentBindingBullet/2_Launch" XFlip="false" Duration="0.1">
            <FrameEvent Type="Attack" StartTime="0" EndTime="0.5" AttackPreset="Common_Radius50" NotifyAttackSuccess="False">
                <OnHit>
                </OnHit>
            </FrameEvent>
            <FrameEvent Type="FrameTag" StartTime="0" EndTime="999" Tag="HitAvail"/>
            <FrameEvent Type="FrameTag" StartTime="0" EndTime="999" Tag="GbAvail"/>
        </Animation>

        <Branch Condition="End == true" Execute="AC_Move"/>
    </AC_Launch>

    <AC_Explosion MovementType="FrameEvent" DirectionType="AI" FlipType="Direction" RotationType="Direction">
        <Animation Preset="Sprites/Object/TransparentBindingBullet/4_Explosion" XFlip="true" Duration="0.1">
            <FrameEvent Type="Movement" StartTime="0" Friction="0" MaxVelocity="10" Speed="10"/>
            <FrameEvent Type="Attack" StartTime="0" EndTime="0.1" AttackPreset="Common_Radius50" NotifyAttackSuccess="False">
                <OnHit>
                    <FrameEvent Type="ApplyBuffTarget" ApplyBuff="StunSet"/>
                </OnHit>
            </FrameEvent>
        </Animation>
        <Branch Condition="End == true" Execute="Dead"/>
    </AC_Explosion>
    
    <Dead MovementType="FrameEvent" DirectionType="AlwaysRight">
        <Animation Preset="Sprites/Object/TransparentBindingBullet/5_dead" XFlip="false" Duration="0.1">
            <FrameEvent Type="Effect" StartTime="0" Path="Sprites/Object/TransparentBindingBullet/5_dead" FramePerSecond="0.1" CastShadow="True">
            </FrameEvent>
            <FrameEvent Type="KillEntity" StartTime="0"/>

        </Animation>

        <Branch Condition="End == true" Execute="Dead"/>
    </Dead>

</ActionGraph>