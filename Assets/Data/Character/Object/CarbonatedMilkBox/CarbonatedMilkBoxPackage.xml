<AIPackage Name="CarbonatedMilkBoxPackage" DefaultState="AI_MoveLeft">

    <AIState>
        <AI_MoveLeft UpdateTime="0.0">
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="AC_MoveLeft"/>
            </Event_OnExecute>

            <Branch Condition="ActionExecutedTime >= 0.2" Execute="AI_MoveRight"/>
        </AI_MoveLeft>

        <AI_MoveRight UpdateTime="0.0">
            <Event_OnExecute>
                <AIEvent Type="SetDirectionToTarget"/>
                <AIEvent Type="SetAction" Action="AC_MoveRight"/>
            </Event_OnExecute>

            <Branch Condition="ActionExecutedTime >= 0.2" Execute="AI_MoveLeft"/>
        </AI_MoveRight>

    </AIState>

</AIPackage>