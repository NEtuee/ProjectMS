<AIGraph Name="ThunderFloorAI" DefaultState="Move">

    <Include Path="Assets/Data/AILibrary/Package/CommonDeadPackage.xml"/>
    <Include Path="Assets/Data/AILibrary/Package/CommonHitPackage.xml"/>
    <Include Path="Assets/Data/AILibrary/Package/CommonIdlePackage.xml"/>
    <Include Path="Assets/Data/AILibrary/Package/CommonGuardBrokenPackage.xml"/>
    <Include Path="Assets/Data/AILibrary/Package/CommonChasePackage.xml"/>
    
    <AIPackage Name="SisterThunderSlashPackage" DefaultState="AI_Entry">
        <AIState>
            <AI_Entry UpdateTime="0.0">
                <Event_OnExecute>
                    <AIEvent Type="SetAction" Action="AC_Idle"/>
                </Event_OnExecute>
                <Branch Condition="true" Execute="AI_AttackReady"/>
            </AI_Entry>
            <TerminatePackage>
                <Event_OnExecute>
                    <AIEvent Type="TerminatePackage"/>
                </Event_OnExecute>
            </TerminatePackage>
        </AIState>
    </AIPackage>

    <Move Package="CommonChasePackage">
        <Branch Condition="PackageExecutedTime > 5.0" Execute="Dead"/>
    </Move>

    <Dead Package="CommonDeadPackage">
    </Dead>

</AIGraph>