<ActionGraph Name="SignboardGuardType" DefaultAction="AC_Guard" DefaultFramePerSecond="12">

    <AC_Guard MovementType="FrameEvent" DefenceType="Guard" DefenceDirectionType="MousePoint" DefenceAngle="360">
        <Animation Preset="Sprites/Object/SignboardGuardType/1_Guard" XFlip="false" Duration="1">
            <FrameEvent Type="Movement" StartTime="0" Friction="0" Velocity="0" MaxVelocity="0" Speed="0"/>
        </Animation>

        <Branch Condition="End == true" Execute="AC_Guard"/>
    </AC_Guard>

    <AC_GuardBroken MovementType="FrameEvent" DirectionType="AttackedPoint" DirectionAngle="180">
        <Animation Preset="Sprites/Object/SignboardGuardType/2_GuardBroken" XFlip="false" Duration="1">
        </Animation>

        <Branch Condition="Dead == true" Execute="Dead"/>
    </AC_GuardBroken>
    
    <Dead MovementType="FrameEvent" DirectionType="AlwaysRight">
        <Animation Preset="Sprites/Object/SignboardGuardType/3_dead" XFlip="false" Duration="1">

            <FrameEvent Type="Effect" StartTime="0" Path="Sprites/Object/SignboardGuardType/3_dead" FramePerSecond="0.2" CastShadow="True">
                <Physics UseGravity="True" Velocity="Random_-2.5^2.5 Random_1.5^3.5" Friction="1" Torque="Random_-30^30" AngularFriction="10.0"/>
            </FrameEvent>
            <FrameEvent Type="KillEntity" StartTime="0"/>

        </Animation>

        <Branch Condition="End == true" Execute="Dead"/>
    </Dead>

</ActionGraph>