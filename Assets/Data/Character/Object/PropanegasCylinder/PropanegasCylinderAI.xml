<AIGraph Name="PropanegasCylinderAI" DefaultState="Idle">
    <Include Path="Assets/Data/Character/Object/PropanegasCylinder/PropanegasCylinderPackage.xml"/>
    <Include Path="Assets/Data/AILibrary/Package/CommonGuardBrokenPackage.xml"/>
    <Include Path="Assets/Data/Character/Object/PropanegasCylinder/PropanegasCylinderExplosionPackage.xml"/>

    <BranchSet Name="ReactionSet">
        <Branch Condition="GuardBreakFail || GuardBroken" Execute="GuardBroken"/>
        <Branch Condition="Hit" Execute="Hit"/>
        <Branch Condition="CurrentPackageEnd" Execute="Idle"/>
    </BranchSet>

    <Idle Package="PropanegasCylinderPackage">
        <UseBranchSet Name="ReactionSet"/>
    </Idle>

    <Hit Package="PropanegasCylinderPackage">
        <Branch Condition="GraphExecutedTime >= 3.0" Execute="Explosion"/>
    </Hit>

    <GuardBroken Package="CommonGuardBrokenPackage">
        <UseBranchSet Name="ReactionSet"/>
    </GuardBroken>

    <Explosion Package="PropanegasCylinderExplosionPackage">
    </Explosion>
</AIGraph>