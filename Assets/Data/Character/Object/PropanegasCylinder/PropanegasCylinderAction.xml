<ActionGraph Name="PropanegasCylinder" DefaultAction="AC_Idle" DefaultFramePerSecond="12">

    <AC_Idle MovementType="Empty" DirectionType="AI" FlipType="Direction" RotationType="Direction">
        <Animation Preset="Sprites/Object/PropanegasCylinder/1_idle" XFlip="false" Duration="1">
        </Animation>

        <Branch Condition="End" Execute="AC_Idle"/>
        <Branch Condition="Hit" Execute="AC_Hit"/>
    </AC_Idle>

    <AC_Hit MovementType="Empty" DirectionType="Keep" DefenceType="Evade" DefenceAngle="360">
        <Animation Preset="Sprites/Object/PropanegasCylinder/2_hit" Duration="3">
            <FrameEvent Type="Projectile" StartTime="0" EndTime="3" GraphName="PropanegasCylinder" DirectionType="AI" SpawnTargetType="Self"/>
            <FrameEvent Type="Attack" StartTime="3" AttackPreset="Aoba_EmpGrenade">
                <OnHit>
                    <FrameEvent Type="ApplyBuffTarget" ApplyBuff="CommonHalfAttack"/>
                </OnHit>
            </FrameEvent>
        </Animation>
        <Branch Condition="End" Execute="Exit"/>
    </AC_Hit>

    <AC_GuardBroken MovementType="FrameEvent" DirectionType="AttackedPoint" DirectionAngle="180">
        <Animation Preset="Sprites/Object/PropanegasCylinder/3_guardbroken" XFlip="false" Duration="0.1">
            <FrameEvent Type="FrameEvent" StartTime="0" Friction="1" Velocity="9.5" MaxVelocity="8" Speed="0"/>
        </Animation>

        <Branch Condition="End == true" Execute="AC_Idle"/>
    </AC_GuardBroken>

    <Exit MovementType="Empty" DirectionType="Keep">
        <Animation Preset="Sprites/Object/PropanegasCylinder/4_exit" Duration="0.016">
            <FrameEvent Type="KillEntity" StartFrame="0"/>
        </Animation>

        <Branch Condition="End" Execute="Exit"/>
    </Exit>

</ActionGraph>