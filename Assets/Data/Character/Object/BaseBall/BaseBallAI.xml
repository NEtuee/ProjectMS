<AIGraph Name="BaseBallAI" DefaultState="Move">

    <Include Path="Assets/Data/AILibrary/Package/CommonDeadPackage.xml"/>
    <Include Path="Assets/Data/AILibrary/Package/CommonIdlePackage.xml"/>
    <Include Path="Assets/Data/AILibrary/Package/CommonChasePackage.xml"/>

    <AIPackage Name="BaseBallPackage" DefaultState="AI_Chase">
        <AIState>
            <AI_Chase UpdateTime="0" TargetSearchType="Near" TargetSearchRange="999.9" AllyTarget="Enemy">
                <Event_OnExecute>
                    <AIEvent Type="SetAction" Action="AC_Move"/>
                </Event_OnExecute>
                
                <Branch Condition="TargetDistance > 9.0" Execute="TerminatePackage"/>
            </AI_Chase>

            <AI_Reverse UpdateTime="0" TargetSearchType="Near" TargetSearchRange="999.9" AllyTarget="Ally">
                <Event_OnExecute>
                    <AIEvent Type="ChangeAlly" Key="PlayerBattleObject"/>
                    <AIEvent Type="SetDirectionToTarget" Angle="180"/>
                    <AIEvent Type="SetAction" Action="AC_Reverse"/>
                </Event_OnExecute>
                
                <Branch Condition="TargetDistance > 9.0" Execute="TerminatePackage"/>
            </AI_Reverse>

            <TerminatePackage>
                <Event_OnExecute>
                    <AIEvent Type="TerminatePackage"/>
                </Event_OnExecute>
            </TerminatePackage>
        </AIState>
    </AIPackage>


    <Move Package="BaseBallPackage">
        <Branch Condition="Dead" Execute="Dead"/>
        <Branch Condition="Hit" Execute="Dead"/>
        <Branch Condition="GuardBreakFail || GuardBroken" Execute="Reverse"/>
    </Move>
    <Reverse Package="BaseBallPackage" EntryNode="AI_Reverse">
        <Branch Condition="Dead" Execute="Dead"/>
        <Branch Condition="Hit" Execute="Dead"/>
        <Branch Condition="GuardBreakFail || GuardBroken" Execute="Reverse"/>
    </Reverse>
    <Dead Package="CommonDeadPackage">
    </Dead>


</AIGraph>