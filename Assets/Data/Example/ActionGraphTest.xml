

<ActionGraph Name="Test" DefaultAction="Idle" DefaultFramePerSecond="4" DefaultBuff="4 5 8">

    <BranchSet Name="CommonBattleBranchSet">
        <Branch Condition="InputGuard == true" Action="Guard"/>
        <Branch Condition="InputAttackCharge == true" Action="AttackCharge"/>
        <Branch Condition="(getStat_Blood >= 20.0) &#38;&#38; InputAttackBlood == true" Action="BloodSpreadPrepare"/>
    </BranchSet>

    <BranchSet Name="CommonMoveBranchSet">
        <Branch Condition="ActionDash == true &#38;&#38; (getStat_Stamina >= 20.0)" Action="DashStart"/>
        <Branch Condition="ActionTest == false" Action="Idle"/>
    </BranchSet>

    <Idle DirectionType="Keep" FlipType="MousePoint">
        <Animation Path="Resources/Sprites/Player/idle/" StartFrame="0" EndFrame="8" FramePerSecond="12" XFlip="true">
        </Animation>

        <UseBranchSet Name="CommonBattleBranchSet"/>

        <Branch Condition="ActionTest == true" Action="MoveAll"/>
        <Branch Condition="End == true" Action="Idle"/>
    </Idle>

    <CommonMoveSelection IsActionSelection="true">
        <Branch Condition="ActionTest == true" Action="MoveAll"/>
        <UseBranchSet Name="CommonMoveBranchSet"/>
    </CommonMoveSelection>


    <MoveAll MovementType="GraphPreset" MovementGraphPreset="Move" DirectionType="MoveInput" FlipType="MousePoint" NormalizedSpeed="true">
        <Animation Path="Resources/Sprites/DummyPlayer/MoveForward/" StartFrame="0" EndFrame="5" FramePerSecond="12" XFlip="true">
            <MultiSelectAnimation Path="Resources/Sprites/Player/moveUp/" Condition="(AngleDirection &gt;= 45.0) &#38;&#38; (AngleDirection &lt; 135.0)"/>
            <MultiSelectAnimation Path="Resources/Sprites/Player/moveDown/" Condition="(AngleDirection &gt;= 225.0) &#38;&#38; (AngleDirection &lt; 315.0)"/>
            <MultiSelectAnimation Path="Resources/Sprites/Player/moveBack/" Condition="(AngleDirection &gt;= 315.0) || (AngleDirection &lt; 45.0) &#38;&#38; (IsXFlip == true)"/>
            <MultiSelectAnimation Path="Resources/Sprites/Player/moveFront/" Condition="(AngleDirection &gt;= 135.0) &#38;&#38; (AngleDirection &lt; 225.0) &#38;&#38; (IsXFlip == true)"/>
            <MultiSelectAnimation Path="Resources/Sprites/Player/moveBack/" Condition="(AngleDirection &gt;= 135.0) &#38;&#38; (AngleDirection &lt; 225.0) &#38;&#38; (IsXFlip == false)"/>
            <MultiSelectAnimation Path="Resources/Sprites/Player/moveFront/" Condition="(AngleDirection &gt;= 315.0) || (AngleDirection &lt; 45.0) &#38;&#38; (IsXFlip == false)"/>
        </Animation>

        <UseBranchSet Name="CommonMoveBranchSet"/>
        <UseBranchSet Name="CommonBattleBranchSet"/>

        <Branch Condition="End == true" Action="MoveAll"/>
    </MoveAll>


    <AttackCharge MovementType="GraphPreset" MovementGraphPreset="AttackCharge" DirectionType="MoveInput" FlipType="MousePoint" ApplyBuff="2 3">
        <Animation Path="Resources/Sprites/DummyPlayer/AttackCharge/" StartFrame="0" EndFrame="1" FramePerSecond="1">
        </Animation>

        <Branch Condition="InputAttackCharge == false" Action="AttackPrepare"/>
        <Branch Condition="End == true" Action="AttackCharge"/>
    </AttackCharge>

    <AttackPrepare MovementType="Empty" DirectionType="MousePoint" FlipType="Keep">
        <Animation Path="Resources/Sprites/DummyPlayer/Attack/" StartFrame="0" EndFrame="1" FramePerSecond="999">
        </Animation>


        <Branch Condition="End == true &#38;&#38; (getStat_Charging >= 100.0)" Action="Attack_LV3"/>
        <Branch Condition="End == true &#38;&#38; (getStat_Charging >= 50.0)" Action="Attack_LV2"/>
        <Branch Condition="End == true" Action="Attack_LV1"/>

    </AttackPrepare>

    <Attack_Guarded MovementType="GraphPreset" MovementGraphPreset="AttackGuarded" DirectionType="Keep" FlipType="Keep">
        <Animation Path="Resources/Sprites/DummyPlayer/Attack/" StartFrame="0" EndFrame="1" FramePerSecond="3">
        </Animation>

        <Branch Condition="End == true" Action="CommonMoveSelection"/>
    </Attack_Guarded>

    <Attack_Parried MovementType="GraphPreset" MovementGraphPreset="AttackGuarded" DirectionType="Keep" FlipType="Keep">
        <Animation Path="Resources/Sprites/DummyPlayer/Attack/" StartFrame="0" EndFrame="1" FramePerSecond="0.3">
        </Animation>

        <Branch Condition="End == true" Action="CommonMoveSelection"/>
    </Attack_Parried>

    <Attack_LV1 MovementType="GraphPreset" MovementGraphPreset="Attack" DirectionType="Keep" FlipType="Keep">
        <Animation Path="Resources/Sprites/DummyPlayer/Attack/" StartFrame="0" EndFrame="1" FramePerSecond="3">
            <FrameEvent Type="Attack" StartFrame="0" AttackPreset="PlayerAttackTest">
                <OnHit>
                    <FrameEvent Type="ApplyBuffTarget" ApplyBuff="1"/>
                    <FrameEvent Type="ApplyBuff" ApplyBuff="6 7"/>
                </OnHit>

                <OnGuard>
                    <FrameEvent Type="TeleportToTarget"/>
                </OnGuard>

                <OnParry>
                    <FrameEvent Type="TeleportToTarget"/>
                </OnParry>

            </FrameEvent>
        </Animation>

        <Branch Condition="AttackGuarded == true" Action="Attack_Guarded"/>
        <Branch Condition="AttackParried == true" Action="Attack_Parried"/>
        <Branch Condition="End == true" Action="CommonMoveSelection"/>
    </Attack_LV1>
    
    <Attack_LV2 MovementType="GraphPreset" MovementGraphPreset="Attack" DirectionType="Keep" FlipType="Keep">
        <Animation Path="Resources/Sprites/DummyPlayer/Attack/" StartFrame="0" EndFrame="1" FramePerSecond="3">
            <FrameEvent Type="Attack" StartFrame="0" AttackPreset="PlayerAttackTest">
                <OnHit>
                    <FrameEvent Type="ApplyBuffTarget" ApplyBuff="1"/>
                    <FrameEvent Type="ApplyBuff" ApplyBuff="6 7"/>
                </OnHit>

                <OnGuard>
                    <FrameEvent Type="TeleportToTarget"/>
                </OnGuard>

                <OnParry>
                    <FrameEvent Type="TeleportToTarget"/>
                </OnParry>

            </FrameEvent>
        </Animation>

        <Branch Condition="AttackGuarded == true" Action="Attack_Guarded"/>
        <Branch Condition="AttackParried == true" Action="Attack_Parried"/>
        <Branch Condition="End == true" Action="CommonMoveSelection"/>
    </Attack_LV2>

    <Attack_LV3 MovementType="GraphPreset" MovementGraphPreset="Attack" DirectionType="Keep" FlipType="Keep">
        <Animation Path="Resources/Sprites/DummyPlayer/Attack/" StartFrame="0" EndFrame="1" FramePerSecond="3">
            <FrameEvent Type="Attack" StartFrame="0" AttackPreset="PlayerAttackTest">
                <OnHit>
                    <FrameEvent Type="ApplyBuffTarget" ApplyBuff="1"/>
                    <FrameEvent Type="ApplyBuff" ApplyBuff="6 7"/>
                </OnHit>

                <OnGuard>
                    <FrameEvent Type="TeleportToTarget"/>
                </OnGuard>

                <OnParry>
                    <FrameEvent Type="TeleportToTarget"/>
                </OnParry>

            </FrameEvent>
        </Animation>

        <Branch Condition="AttackGuarded == true" Action="Attack_Guarded"/>
        <Branch Condition="AttackParried == true" Action="Attack_Parried"/>
        <Branch Condition="End == true" Action="CommonMoveSelection"/>
    </Attack_LV3>

    <BloodSpreadPrepare DirectionType="MousePoint" FlipType="MousePoint">
        <Animation Path="Resources/Sprites/DummyPlayer/Attack/" StartFrame="0" EndFrame="1" FramePerSecond="999">
        </Animation>

        <Branch Condition="End == true" Action="BloodSpread"/>
    </BloodSpreadPrepare>


    <BloodSpread MovementType="GraphPreset" MovementGraphPreset="BloodSpread" DirectionType="Keep" FlipType="Keep" ApplyBuff="10">
        <Animation Path="Resources/Sprites/DummyPlayer/Attack/" StartFrame="0" EndFrame="1" FramePerSecond="2">
            <FrameEvent Type="Attack" StartFrame="0" AttackPreset="PlayerBloodSpreadTest">
                <OnHit>
                    <FrameEvent Type="ApplyBuffTarget" ApplyBuff="11"/>
                </OnHit>

            </FrameEvent>
        </Animation>

        <Branch Condition="End == true" Action="CommonMoveSelection"/>
    </BloodSpread>


    <Guard MovementType="GraphPreset" MovementGraphPreset="Guard" DirectionType="MoveInput" FlipType="Keep">
        <Animation Path="Resources/Sprites/DummyPlayer/Guard/" StartFrame="0" EndFrame="1" FramePerSecond="1" XFlip="true">
        </Animation>

        <Branch Condition="InputGuard == false" Action="CommonMoveSelection"/>
        <Branch Condition="End == true" Action="Guard"/>
    </Guard>


    <DashStart MovementType="Empty" DirectionType="Keep" FlipType="AlwaysTurnOff" RotationType="Direction" ApplyBuff="9">
        <Animation Path="Resources/Sprites/DummyPlayer/Dash/" StartFrame="0" EndFrame="1" FramePerSecond="999" XFlip="true">
        </Animation>

        <Branch Condition="End == true" Action="Dash"/>
    </DashStart>


    <Dash MovementType="GraphPreset" DirectionType="Keep" MovementGraphPreset="Dash" FlipType="Keep" RotationType="Direction">
        <Animation Path="Resources/Sprites/DummyPlayer/Dash/" StartFrame="0" EndFrame="1" FramePerSecond="3" XFlip="true">
        </Animation>

        <Branch Condition="End == true &#38;&#38; ActionTest == true" Action="MoveAll"/>
        <Branch Condition="End == true" Action="Idle"/>
    </Dash>

</ActionGraph>